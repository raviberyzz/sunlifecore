<div class="{{wrapper}} {{first-open}} aem-GridColumn aem-GridColumn--default--12">
	<div class="cmp-accordion" data-cmp-is="accordion">
		{{#each list}}
		<div class="cmp-accordion__item" data-cmp-hook-accordion="item">
			<h3 class="cmp-accordion__header" data-toggle="collapse">
				<button class="cmp-accordion__button vertical-middle-align" data-cmp-hook-accordion="button">
					<span class="cmp-accordion__icon" aria-expanded="false"></span>
					<span class="cmp-accordion__title">{{accordion-head}}</span>
				</button>
			</h3>
			<div data-cmp-hook-accordion="panel" class="cmp-accordion__panel collapse" role="expand-collapse">
				<div class="text">
					<div class="cmp-text">
						{{accordion-body}}
					</div>
				</div>
			</div>
		</div>
		{{/each}}
	</div>
</div>
