<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Template"
    allowedPaths="[/content/entities(/.*)?]"
    ranking="{Long}100">
    <jcr:content
        cq:scaffolding="/conf/sunlife-apac/settings/dam/cfm/models/product-card-model/jcr:content/model"
        cq:templateType="/libs/settings/dam/cfm/model-types/fragment"
        jcr:description="This model will be used to create product cards"
        jcr:primaryType="cq:PageContent"
        jcr:title="Product Card Model"
        sling:resourceSuperType="dam/cfm/models/console/components/data/entity"
        sling:resourceType="dam/cfm/models/console/components/data/entity/default">
        <model
            cq:targetPath="/content/entities"
            jcr:primaryType="cq:PageContent"
            sling:resourceType="wcm/scaffolding/components/scaffolding"
            dataTypesConfig="/mnt/overlay/settings/dam/cfm/models/formbuilderconfig/datatypes"
            maxGeneratedOrder="20">
            <cq:dialog
                jcr:primaryType="nt:unstructured"
                sling:resourceType="cq/gui/components/authoring/dialog">
                <content
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                    <items
                        jcr:primaryType="nt:unstructured"
                        maxGeneratedOrder="26">
                        <productCardName
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            emptyText="Product Card Name"
                            fieldDescription="Enter Product Card Name"
                            fieldLabel="Product Card Name"
                            listOrder="21"
                            maxlength="255"
                            metaType="text-single"
                            name="productCardName"
                            renderReadOnly="false"
                            required="on"
                            showEmptyInReadOnly="true"
                            valueType="string"/>
                       <productCardAltTxt
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            emptyText="Product Card Alt Text"
                            fieldDescription="Enter Product Card Alt txt"
                            fieldLabel="Product Card Alt Txt"
                            listOrder="22"
                            maxlength="255"
                            metaType="text-single"
                            name="productCardAltTxt"
                            renderReadOnly="false"
                            showEmptyInReadOnly="true"
                            valueType="string"/>
                        <productCardPagePath
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="dam/cfm/models/editor/components/contentreference"
                            emptyText="Product Card Page Path"
                            fieldDescription="Select Product Card Page Path"
                            fieldLabel="Product Card Page Link"
                            filter="hierarchy"
                            listOrder="23"
                            metaType="reference"
                            name="productCardPagePath"
                            nameSuffix="contentReference"
                            renderReadOnly="false"
                            rootPath="/content/sunlife"
                            showEmptyInReadOnly="true"
                            valueType="string"/>
                        <productFeaturedCard
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                            fieldDescription="Click the checkbox to display the product card as featured card"
                            listOrder="24"
                            metaType="boolean"
                            name="featuredCard"
                            renderReadOnly="false"
                            showEmptyInReadOnly="true"
                            text="Featured Card"
                            valueType="boolean"/>
                        <productCardImage
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="dam/cfm/models/editor/components/contentreference"
                            emptyText="Product Card Image"
                            fieldDescription="Select Product Card Image"
                            fieldLabel="Product Card Image"
                            filter="hierarchy"
                            listOrder="25"
                            metaType="reference"
                            name="productCardImage"
                            nameSuffix="contentReference"
                            renderReadOnly="false"
                            rootPath="/content/dam/sunlife"
                            showEmptyInReadOnly="true"
                            valueType="string"/>
                        <productCardHeading
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            emptyText="Product Card Heading"
                            fieldDescription="Enter Product Card Heading"
                            fieldLabel="Product Card Heading"
                            listOrder="26"
                            maxlength="255"
                            metaType="text-single"
                            name="productCardHeading"
                            renderReadOnly="false"
                            showEmptyInReadOnly="true"
                            valueType="string"/>
                        <productCardContent
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="dam/cfm/admin/components/authoring/contenteditor/multieditor"
                            cfm-element="Product Card Content"
                            default-mime-type="text/html"
                            emptyText="Product Card Body Content"
                            fieldDescription="Enter Product Card Body Content"
                            listOrder="27"
                            metaType="text-multi"
                            name="productCardContent"
                            renderReadOnly="false"
                            showEmptyInReadOnly="true"
                            valueType="string"/>
                    </items>
                </content>
            </cq:dialog>
        </model>
    </jcr:content>
</jcr:root>