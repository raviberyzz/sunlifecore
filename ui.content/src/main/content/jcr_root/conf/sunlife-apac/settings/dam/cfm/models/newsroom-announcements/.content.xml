<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Template"
    allowedPaths="[/content/entities(/.*)?]"
    ranking="{Long}100">
    <jcr:content
        cq:scaffolding="/conf/sunlife-apac/settings/dam/cfm/models/newsroom-announcements/jcr:content/model"
        cq:templateType="/libs/settings/dam/cfm/model-types/fragment"
        jcr:description="This model should be used to create newsroom announcements/articles"
        jcr:primaryType="cq:PageContent"
        jcr:title="Newsroom Announcements"
        sling:resourceSuperType="dam/cfm/models/console/components/data/entity"
        sling:resourceType="dam/cfm/models/console/components/data/entity/default">
        <model
            cq:targetPath="/content/entities"
            jcr:primaryType="cq:PageContent"
            sling:resourceType="wcm/scaffolding/components/scaffolding"
            dataTypesConfig="/mnt/overlay/settings/dam/cfm/models/formbuilderconfig/datatypes"
            maxGeneratedOrder="20">
            <cq:dialog
                jcr:primaryType="nt:unstructured"
                sling:resourceType="cq/gui/components/authoring/dialog">
                <content
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                    <items
                        jcr:primaryType="nt:unstructured"
                        maxGeneratedOrder="21">
                        <articlePublishedDate
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                            displayedFormat="YYYY-MM-DD HH:mm"
                            emptyText="YYYY-MM-DD HH:mm"
                            fieldLabel="Newsroom article publish date"
                            listOrder="5"
                            metaType="date"
                            name="articlePublishedDate"
                            renderReadOnly="false"
                            required="on"
                            showEmptyInReadOnly="true"
                            type="datetime"
                            valueFormat="YYYY-MM-DD[T]HH:mm:ss.000Z"
                            valueType="calendar">
                            <granite:data
                                jcr:primaryType="nt:unstructured"
                                typeHint="Date"/>
                        </articlePublishedDate>
                        <newsroomHeading
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            emptyText="Please enter the heading here."
                            fieldLabel="Newsroom article heading"
                            listOrder="1"
                            maxlength="255"
                            metaType="text-single"
                            name="newsroomHeading"
                            renderReadOnly="false"
                            showEmptyInReadOnly="true"
                            valueType="string"/>
                        <newsroomPagePath
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="dam/cfm/models/editor/components/contentreference"
                            emptyText="Please configure the path where this content fragment will be used."
                            fieldLabel="Path of the newsroom article page"
                            filter="hierarchy"
                            listOrder="21"
                            metaType="reference"
                            name="newsroomPagePath"
                            nameSuffix="contentReference"
                            renderReadOnly="false"
                            showEmptyInReadOnly="true"
                            valueType="string"/>
                        <newsroomContent
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="dam/cfm/admin/components/authoring/contenteditor/multieditor"
                            cfm-element="Newsroom article content"
                            default-mime-type="text/html"
                            fieldDescription="Please enter the newsroom article content here"
                            listOrder="2"
                            metaType="text-multi"
                            name="newsroomContent"
                            renderReadOnly="false"
                            showEmptyInReadOnly="true"
                            valueType="string"/>
                    </items>
                </content>
            </cq:dialog>
        </model>
    </jcr:content>
</jcr:root>
