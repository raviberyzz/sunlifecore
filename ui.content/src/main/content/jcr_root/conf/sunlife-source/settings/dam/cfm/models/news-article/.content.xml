<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Template"
    allowedPaths="[/content/entities(/.*)?]"
    ranking="{Long}100">
    <jcr:content
        cq:lastModified="{Date}2021-02-11T16:14:43.654-05:00"
        cq:lastModifiedBy="admin"
        cq:scaffolding="/conf/source/settings/dam/cfm/models/news-article/jcr:content/model"
        cq:templateType="/libs/settings/dam/cfm/model-types/fragment"
        jcr:description="News article"
        jcr:primaryType="cq:PageContent"
        jcr:title="News article"
        sling:resourceSuperType="dam/cfm/models/console/components/data/entity"
        sling:resourceType="dam/cfm/models/console/components/data/entity/default">
        <model
            cq:targetPath="/content/entities"
            jcr:primaryType="cq:PageContent"
            sling:resourceType="wcm/scaffolding/components/scaffolding"
            dataTypesConfig="/mnt/overlay/settings/dam/cfm/models/formbuilderconfig/datatypes"
            maxGeneratedOrder="20">
            <cq:dialog
                jcr:primaryType="nt:unstructured"
                sling:resourceType="cq/gui/components/authoring/dialog">
                <content
                    jcr:lastModified="{Date}2021-02-11T16:14:43.654-05:00"
                    jcr:lastModifiedBy="admin"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                    <items
                        jcr:primaryType="nt:unstructured"
                        maxGeneratedOrder="21">
                        <publishedDate
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                            displayedFormat="YYYY-MM-DD HH:mm"
                            emptyText="YYYY-MM-DD HH:mm"
                            fieldDescription="Select news article published date"
                            fieldLabel="News article published date"
                            listOrder="5"
                            metaType="date"
                            name="publishedDate"
                            renderReadOnly="false"
                            required="on"
                            showEmptyInReadOnly="true"
                            type="datetime"
                            valueFormat="YYYY-MM-DD[T]HH:mm:ss.000Z"
                            valueType="calendar">
                            <granite:data
                                jcr:primaryType="nt:unstructured"
                                typeHint="Date"/>
                        </publishedDate>
                        <heading
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            emptyText="Please enter news article heading"
                            fieldDescription="Max length is 300"
                            fieldLabel="News article heading"
                            listOrder="1"
                            maxlength="300"
                            metaType="text-single"
                            name="heading"
                            renderReadOnly="false"
                            required="on"
                            showEmptyInReadOnly="true"
                            valueType="string"/>
                        <pagePath
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="dam/cfm/models/editor/components/contentreference"
                            emptyText="Please select news article page path"
                            fieldDescription="Please select news article page path"
                            fieldLabel="News article page path"
                            filter="hierarchy"
                            listOrder="8"
                            metaType="reference"
                            name="pagePath"
                            nameSuffix="contentReference"
                            renderReadOnly="false"
                            required="on"
                            showEmptyInReadOnly="true"
                            valueType="string"/>
                        <linkOption
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                            fieldDescription="Please specify whether to open link in the same window, a new window or a lightbox for videos."
                            fieldLabel="Link option"
                            listOrder="21"
                            metaType="enumeration"
                            name="linkOption"
                            options="Open in the same window,Open in a new window,Open in lightbox"
                            renderReadOnly="false"
                            showEmptyInReadOnly="true"
                            value="Open in the same window"
                            valueType="string">
                            <datasource
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="dam/cfm/admin/components/datasources/optionrenderer"
                                variant="default"/>
                            <items
		                        jcr:primaryType="nt:unstructured">
		                        <option1
		                        	jcr:primaryType="nt:unstructured"
		                        	text="Open in same window"
		                        	value="sameWindow"
		                        	valueType="string"/>
		                        <option2
		                        	jcr:primaryType="nt:unstructured"
		                        	text="Open in new window (coming soon...)"
		                        	value="newWindow"
		                        	valueType="string"/>
		                        <option3
		                        	jcr:primaryType="nt:unstructured"
		                        	text="Open in lightbox (coming soon...)"
		                        	value="lightbox"
		                        	valueType="string"/>
		                    </items>
                        </linkOption>
                        <thumbnailImage
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="dam/cfm/models/editor/components/contentreference"
                            emptyText="Please select thumbnail image"
                            fieldDescription="Please select thumbnail image"
                            fieldLabel="Thumbnail image"
                            filter="hierarchy"
                            listOrder="8"
                            metaType="reference"
                            name="thumbnailImage"
                            nameSuffix="contentReference"
                            renderReadOnly="false"
                            showEmptyInReadOnly="true"
                            valueType="string"/>
                        <thumbnailImageFeatured
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="dam/cfm/models/editor/components/contentreference"
                            emptyText="Please select news article thumbnail image (Featured)"
                            fieldDescription="Please select news article thumbnail image (Featured)"
                            fieldLabel="Thumbnail image (Featured)"
                            filter="hierarchy"
                            listOrder="8"
                            metaType="reference"
                            name="thumbnailImageFeatured"
                            nameSuffix="contentReference"
                            renderReadOnly="false"
                            showEmptyInReadOnly="true"
                            valueType="string"/>
                        <pinArticle
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                            emptyOption="{Boolean}true"
                            fieldDescription="Please specify order for pinning the news article"
                            fieldLabel="Select the order for pinning the news article"
                            listOrder="6"
                            metaType="enumeration"
                            name="pinArticle"
                            options="1,2,3,4"
                            renderReadOnly="false"
                            showEmptyInReadOnly="true"
                            valueType="string">
                            <datasource
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="dam/cfm/admin/components/datasources/optionrenderer"
                                variant="default"/>
                        </pinArticle>
                        <articleContent
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="dam/cfm/admin/components/authoring/contenteditor/multieditor"
                            cfm-element="News article summary"
                            default-mime-type="text/html"
                            fieldDescription="Please enter news article summary"
                            listOrder="2"
                            metaType="text-multi"
                            name="summary"
                            renderReadOnly="false"
                            showEmptyInReadOnly="true"
                            valueType="string"/>
                    </items>
                </content>
            </cq:dialog>
        </model>
    </jcr:content>
</jcr:root>
