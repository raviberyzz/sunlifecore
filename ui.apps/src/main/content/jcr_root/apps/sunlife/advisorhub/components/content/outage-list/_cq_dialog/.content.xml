<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Outage List"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <parentPath
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                        fieldDescription="Path under which the Content Fragments are located."
                                        fieldLabel="Parent Path"
                                        required="{Boolean}true"
                                        name="./parentPath"
                                        rootPath="/content/dam"/>
                                   <displayType
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Display Type"
                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                        margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <displayType
                                                granite:class="cq-dialog-dropdown-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Select how component should look like."
                                                fieldLabel="Display Type"
                                                name="./displayType">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <item0
                                                        jcr:primaryType="nt:unstructured"
                                                        text="System outage"
                                                        value="system-outage"/>
                                                    <item1
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Known Outage"
                                                        value="known-outage"/>
                                                    <item2
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Planned Outage"
                                                        value="planned-outage"/>
                                                    <item3
                                                        granite:hide="${cqDesign.disableTrue}"
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Site Notification"
                                                        value="site-notification"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".list-option-displayType-showhide-target"/>
                                            </displayType>
                                            <true
                                                granite:class="hide list-option-displayType-showhide-target foundation-layout-util-vmargin"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="site-notification"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <column
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <outageType
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldLabel="Outage Type"
                                                                name="./outageNotificationType"/>
                                                            <outageHelpText
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldLabel="Outage Help Text"
                                                                name="./outageHelpText"/>
                                                        </items>
                                                    </column>
                                                </items>
                                            </true>
                                        </items>
                                    </displayType>
                                </items>
                            </column>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
