<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Search"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
               <items jcr:primaryType="nt:unstructured">
                    <welcometext
                          jcr:primaryType="nt:unstructured"
                          sling:resourceSuperType="/apps/sunlife/core/components/content/text/cq:dialog/content/items/tabs/items/properties/items/columns/items/column/items/text"
                          sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                          fieldDescription="Please specify Welcome text"
                          fieldLabel="Welcome Text"
                          name="./welcomeText"
                          useFixedInlineToolbar="{Boolean}true">
                          <rtePlugins jcr:primaryType="nt:unstructured">
                          <styles
                                jcr:primaryType="nt:unstructured"
                                features="*">
                                <styles jcr:primaryType="nt:unstructured">
                                   <username
                                     jcr:primaryType="nt:unstructured"
                                     cssName="username"
                                     text="Username"/>
                                 </styles>
                          </styles>           
                          </rtePlugins>
                    </welcometext>
                    <searchplaceholder
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                          fieldLabel="Search Placeholder Text"
                          name="./searchPlaceholder"/>
                    <searchbutton
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                          fieldLabel="Search Button Text"
                          name="./searchButton"/>
                    <searchaction
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                          fieldLabel="Search Action"
                          name="./searchUrl"
                          rootPath="/content/"
                          suffix=".html"/>
                    <analyticsID
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                          emptyText="Please configure the analytics id."
                          fieldDescription="Please configure the analytics id."
                          fieldLabel="Analytics id"
                          name="./analyticsId"/>      
                </items>
            </column>
        </items>
    </content>
</jcr:root>
