<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Footer Copyright"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <image
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                        allowUpload="{Boolean}false"
                        autoStart="{Boolean}false"
                        class="cq-droptarget"
                        fieldDescription="Please provide logo to be used in footer"
                        fieldLabel="Logo for footer"
                        fileNameParameter="./fileName"
                        fileReferenceParameter="./fileReference"
                        sling:orderBefore="title"
                        mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff,image/svg+xml]"
                        multiple="{Boolean}false"
                        name="./image"
                        title="Upload Image Asset"
                        uploadUrl="${suffix.path}"
                        useHTML5="{Boolean}true"/>
                    <title
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        sling:hideResource="{Boolean}true"
                        fieldDescription="Please specify title"
                        fieldLabel="Title"
                        name="./title"
                        rootPath="/content"/>
                   <slffooterText
                        jcr:primaryType="nt:unstructured"
                        sling:resourceSuperType="/apps/sunlife/core/components/content/text/cq:dialog/content/items/tabs/items/properties/items/columns/items/column/items/text"
                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                        sling:hideResource="{Boolean}true"
                        fieldDescription="Please specify SLF text"
                        fieldLabel="SLF Text"
                        name="./slfText"
                        useFixedInlineToolbar="{Boolean}true"/>
                 </items>
            </column>
        </items>
    </content>
</jcr:root>
