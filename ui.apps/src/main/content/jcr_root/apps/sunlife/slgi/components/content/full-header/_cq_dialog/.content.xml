<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Header"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem_cmp_list_v2">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <signin
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Sign in"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <signin
                                                granite:class="cq-dialog-dropdown-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Do you need Signin for the site"
                                                name="./listFromSignin">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".list-option-listFromSignin-showhide-target"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <false
                                                        granite:hide="${cqDesign.disableFalse}"
                                                        jcr:primaryType="nt:unstructured"
                                                        text="No"
                                                        value="signinfalse"/>
                                                    <true
                                                        granite:hide="${cqDesign.disableTrue}"
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Yes"
                                                        value="signintrue"/>
                                                </items>
                                            </signin>
                                            <signintrue
                                                granite:class="hide list-option-listFromSignin-showhide-target foundation-layout-util-vmargin"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="signintrue"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <column
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                                        <items jcr:primaryType="nt:unstructured">                                                            
                                                            <signintitle
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldLabel="Signin Button Title"
                                                                name="./signinTitle"/>
                                                            <signinstyle
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                                fieldLabel="Signin Style"
                                                                name="./signinStyle">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <nocolor
                                                                        jcr:primaryType="nt:unstructured"
                                                                        text="No color"
                                                                        value="_blank"/>
                                                                </items>
                                                            </signinstyle>
                                                 <text
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                    fieldLabel="Text"
                                                    name="./text"
                                                    granite:hide="${cqDesign.htmlDisabled}">                                                                
                                                 	 </text>    
                                                        </items>
                                                    </column>
                                                </items>
                                            </signintrue>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </signin>                 
                     <mobilenav
                               jcr:primaryType="nt:unstructured"
                               jcr:title="MobileNav"
                               sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                               composite="{Boolean}true"
                               fieldLabel="Mobilenav links">
                                   <field
                                         jcr:primaryType="nt:unstructured"
                                         sling:resourceType="granite/ui/components/coral/foundation/container"
                                         name="./mobilenavlinks">
                                          <items jcr:primaryType="nt:unstructured">
                                                       <column
                                                              jcr:primaryType="nt:unstructured"
                                                              sling:resourceType="granite/ui/components/coral/foundation/container">
                                                       <items jcr:primaryType="nt:unstructured">
                                                       <navigationRoot
                                                             jcr:primaryType="nt:unstructured"
                                                             sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                             fieldDescription="The root page from which to build the navigation. Can be a blueprint master, language master or regular page."
                                                             fieldLabel="Navigation Root"
                                                             forceSelection="{Boolean}true"
                                                             name="./navigationRoot"
                                                             required="{Boolean}true"
                                                             rootPath="/content"
                                                             value="${not empty cqDesign.navigationRoot ? cqDesign.navigationRoot : ''}"/>
                                                       <structureStart
                                                             jcr:primaryType="nt:unstructured"
                                                             sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                             fieldDescription="The levels below the navigation root that are to be excluded. To include the navigation root, enter 0."
                                                             fieldLabel="Exclude Root Levels"
                                                             max="100"
                                                             min="0"
                                                             name="./structureStart"
                                                             step="1"
                                                             value="${not empty cqDesign.structureStart ? cqDesign.structureStart : 1}"/>
                                                      <collectAllPages
                                                             jcr:primaryType="nt:unstructured"
                                                             sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                             checked="${not empty cqDesign.collectAllPages ? cqDesign.collectAllPages : true}"
                                                             fieldDescription="Collect all pages that are descendants of the navigation root."
                                                             name="./collectAllPages"
                                                             text="Collect all child pages"
                                                             uncheckedValue="{Boolean}false"
                                                             value="{Boolean}true"/>
                                                      <structureDepth
                                                             jcr:primaryType="nt:unstructured"
                                                             sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                             fieldDescription="Depth of the navigation structure relative to the navigation root."
                                                             fieldLabel="Navigation Structure Depth"
                                                             max="100"
                                                             min="1"
                                                             name="./structureDepth"
                                                             step="1"
                                                             value="${not empty cqDesign.structureDepth ? cqDesign.structureDepth : 1}"/>
                                                    </items>
                                              </column>
                                        </items>
                                  </field>
                         </mobilenav>                   
	                </items>
              </tabs>
        </items>
    </content>
</jcr:root>
