<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Teaser">
    <content jcr:primaryType="nt:unstructured">
        <items jcr:primaryType="nt:unstructured">
            <tabs jcr:primaryType="nt:unstructured">
                <items jcr:primaryType="nt:unstructured">
                    <image jcr:primaryType="nt:unstructured">
                        <items jcr:primaryType="nt:unstructured">
                            <columns jcr:primaryType="nt:unstructured">
                                <items jcr:primaryType="nt:unstructured">
                                    <column jcr:primaryType="nt:unstructured">
                                        <items jcr:primaryType="nt:unstructured">
                                            <imageAlignment
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                                fieldDescription="Defines the position of the image"
                                                fieldLabel="Image Alignment"
                                                name="./imageAlignment"
                                                required="{Boolean}true">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <left
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/radio"
                                                        text="Left"
                                                        value="left-image-position"/>
                                                    <right
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/radio"
                                                        text="Right"
                                                        value="right-image-position"/>
                                                </items>
                                            </imageAlignment>
                                            <file
                                                jcr:primaryType="nt:unstructured"
                                                fieldDescription="Please provide the desktop image"
                                                fieldLabel="Image for Desktop version"
                                                required="{Boolean}true"/>
                                            <imageMobile
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                allowUpload="{Boolean}false"
                                                autoStart="{Boolean}false"
                                                class="cq-droptarget"
                                                fieldDescription="Please provide mobile image to be used in banner"
                                                fieldLabel="Image for Mobile version"
                                                fileNameParameter="./fileName"
                                                fileReferenceParameter="./fileReferenceMobile"
                                                mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff,image/svg+xml]"
                                                multiple="{Boolean}false"
                                                name="./image"
                                                title="Upload Image Asset"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>
                                            <alttext
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Alternative Text for the image"
                                                fieldLabel="Alternative Text"
                                                name="./altText"
                                                required="{Boolean}true"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </image>
                    <text jcr:primaryType="nt:unstructured">
                        <items jcr:primaryType="nt:unstructured">
                            <columns jcr:primaryType="nt:unstructured">
                                <items jcr:primaryType="nt:unstructured">
                                    <column jcr:primaryType="nt:unstructured">
                                        <items
                                            jcr:primaryType="nt:unstructured"
                                            sling:hideChildren="[titleGroup]">
                                            <descriptionGroup jcr:primaryType="nt:unstructured">
                                                <items
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:hideChildren="[descriptionFromLinkedPage]">
                                                    <description
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceSuperType="/apps/sunlife/core/components/content/text/cq:dialog/content/items/tabs/items/properties/items/columns/items/column/items/text"
                                                        name="./description"/>
                                                </items>
                                            </descriptionGroup>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </text>
                    <actions
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Link">
                        <items jcr:primaryType="nt:unstructured">
                            <columns jcr:primaryType="nt:unstructured">
                                <items jcr:primaryType="nt:unstructured">
                                    <column jcr:primaryType="nt:unstructured">
                                        <items
                                            jcr:primaryType="nt:unstructured"
                                            sling:hideChildren="[actionsEnabled,actionsDisabled,actions]"/>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </actions>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
