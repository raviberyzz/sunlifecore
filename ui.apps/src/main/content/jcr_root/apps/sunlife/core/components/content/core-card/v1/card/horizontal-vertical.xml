<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Horizontal/Vertical"
          sling:resourceType="granite/ui/components/foundation/section">
    <layout jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
    <items jcr:primaryType="nt:unstructured">
        <columns jcr:primaryType="nt:unstructured"
                 sling:resourceType="granite/ui/components/foundation/container">
            <items jcr:primaryType="nt:unstructured">
                <cardHeading jcr:primaryType="nt:unstructured"
                           sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                           fieldLabel="Heading"
                           name="./cardHeading" />
                <cardDescription jcr:primaryType="nt:unstructured"
                             sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                             name="./cardDescription"
                             fieldDescription="A description to display as the subheadline for the banner. As per reccomendation this text wrap up to 3 lines."
                             fieldLabel="Description Text"
                             useFixedInlineToolbar="{Boolean}true" />
                <cardCaption jcr:primaryType="nt:unstructured"
                           sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                           fieldLabel="Caption"
                           name="./cardCaption" />
                <cardCategory jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Category"
                            name="./cardCategory" />
                <cardBadgeText jcr:primaryType="nt:unstructured"
                             sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                             fieldLabel="Badge Text"
                             name="./cardBadgeText" />
                <cardBadgeType jcr:primaryType="nt:unstructured"
                             name="./cardBadgeType"
                             fieldLabel="Badge Type"
                             fieldDescription="Select the type of badge want to show. Select none if dont want to show any badge."
                             selectionMode="single"
                             sling:resourceType="granite/ui/components/coral/foundation/form/buttongroup">
                    <items jcr:primaryType="nt:unstructured">
                        <none jcr:primaryType="nt:unstructured"
                              name="./none"
                              text="None"
                              value="none"
                              cq-msm-lockable="none" />
                        <success jcr:primaryType="nt:unstructured"
                                 name="./success"
                                 text="Success"
                                 value="success"
                                 cq-msm-lockable="success" />
                        <info jcr:primaryType="nt:unstructured"
                              name="./info"
                              text="Info"
                              value="info"
                              cq-msm-lockable="info" />
                        <error jcr:primaryType="nt:unstructured"
                               name="./error"
                               text="Error"
                               value="error"
                               cq-msm-lockable="error" />
                        <warning jcr:primaryType="nt:unstructured"
                                 name="./warning"
                                 text="Warning"
                                 value="warning"
                                 cq-msm-lockable="warning" />
                    </items>
                </cardBadgeType>
            </items>
        </columns>
    </items>
</jcr:root>