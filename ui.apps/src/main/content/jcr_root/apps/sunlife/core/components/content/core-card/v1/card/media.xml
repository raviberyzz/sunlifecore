<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Media"
    sling:resourceType="granite/ui/components/foundation/section">
    <layout
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
    <items jcr:primaryType="nt:unstructured">
        <columns
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/container">
            <items jcr:primaryType="nt:unstructured">
                <imageFile
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                            autoStart="{Boolean}false"
                            class="cq-droptarget"
                            fieldLabel="Card Image"
                            fileNameParameter="./imageFileName"
                            fileReferenceParameter="./imageFileReference"
                            mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                            multiple="{Boolean}false"
                            name="./imageFile"
                            title="Upload Image Asset"
                            uploadUrl="${suffix.path}"
                            useHTML5="{Boolean}true"
                            />
                    <category
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Category"
                            name="./category"
                            />
                    <labelText
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Label Text"
                            name="./labelText"
                            />
                <badgeType    
                            jcr:primaryType="nt:unstructured"
                            name="./badgeType"
                            fieldLabel="Badge Type"
                            fieldDescription="Select the type of badge want to show. Select none if dont want to show any badge."
                            selectionMode="single"
                            sling:resourceType="granite/ui/components/coral/foundation/form/buttongroup">
                            <items jcr:primaryType="nt:unstructured">
                                <none jcr:primaryType="nt:unstructured"
                                    name="./none"
                                    text="None"
                                    value="none"
                                    cq-msm-lockable="none"/>
                                <success jcr:primaryType="nt:unstructured"
                                    name="./success"
                                    text="Success"
                                    value="success"
                                    cq-msm-lockable="success"/>
                                <info jcr:primaryType="nt:unstructured"
                                    name="./info"
                                    text="Info"
                                    value="info"
                                    cq-msm-lockable="info"/>
                                <error jcr:primaryType="nt:unstructured"
                                    name="./error"
                                    text="Error"
                                    value="error"
                                    cq-msm-lockable="error"/>
                                <warning jcr:primaryType="nt:unstructured"
                                    name="./warning"
                                    text="Warning"
                                    value="warning"
                                    cq-msm-lockable="warning"/>
                            </items>
                        </badgeType>
                    <title
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Title"
                            name="./title"
                            />
                    <description
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                            sling:resourceSuperType="/apps/sunlife/core/components/content/core-text/v1/text/cq:dialog/content/items/tabs/items/properties/items/columns/items/column/items/text"
                            name="./description"
                            fieldDescription="A description to display as the subheadline for the banner. As per reccomendation this text wrap up to 3 lines."
                            fieldLabel="Description Text"
                            useFixedInlineToolbar="{Boolean}true"
                            />
                    <bodytitle
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Body Title"
                            name="./bodytitle"
                            />
                    <bodyDescription
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                            sling:resourceSuperType="/apps/sunlife/core/components/content/core-text/v1/text/cq:dialog/content/items/tabs/items/properties/items/columns/items/column/items/text"
                            name="./bodyDescription"
                            fieldDescription="A description to display as the subheadline for the banner. As per reccomendation this text wrap up to 3 lines."
                            fieldLabel="Body Description Text"
                            useFixedInlineToolbar="{Boolean}true"
                            />
                    <caption
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Caption"
                            name="./caption"
                            />
                    <buttonLabel
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Button Label"
                            name="./buttonLabel"
                            />
                    <link
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="cq/gui/components/coral/common/form/pagefield"
                            fieldLabel="Button Link"
                            name="./buttonLink"
                           />
                    <target
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                            fieldLabel="Target"
                            name="./target">
                        <items jcr:primaryType="nt:unstructured">
                            <sametab
                                    jcr:primaryType="nt:unstructured"
                                    text="Same Tab"
                                    value="_self"/>
                            <newtab
                                    jcr:primaryType="nt:unstructured"
                                    text="New Tab"
                                    value="_blank"/>
                        </items>
                    </target>
            </items>
        </columns>
    </items>
</jcr:root>
