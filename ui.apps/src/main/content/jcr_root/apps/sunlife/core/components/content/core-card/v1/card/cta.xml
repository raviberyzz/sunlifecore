<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="CTA"
          sling:resourceType="granite/ui/components/foundation/container">
    <layout jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns" />
    <items jcr:primaryType="nt:unstructured">
        <columns jcr:primaryType="nt:unstructured"
                 sling:resourceType="granite/ui/components/foundation/container">
            <items jcr:primaryType="nt:unstructured">
                <ctaType granite:class="cq-dialog-dropdown-showhide"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                    fieldLabel="CTA Type"
                    fieldDescription="Select the type of CTA need to render for card. If don't want any CTA then select the default placeholder option."
                    name="./ctaType">
                    <items jcr:primaryType="nt:unstructured">
                        <static jcr:primaryType="nt:unstructured"
                            text="Select CTA Type"
                            value="noCTA" />
                        <button jcr:primaryType="nt:unstructured"
                            text="Button"
                            value="button" />
                        <link jcr:primaryType="nt:unstructured"
                            text="Link"
                            value="link" />
                        <cardClickable jcr:primaryType="nt:unstructured"
                            text="Card Clickable"
                            value="cardlink" />
                    </items>
                    <granite:data jcr:primaryType="nt:unstructured"
                        cq-dialog-dropdown-showhide-target=".cta-type-option-showhide-target" />
                </ctaType>
                <buttonConfig granite:class="hide cta-type-option-showhide-target"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container">
                    <items jcr:primaryType="nt:unstructured">
                        <cardBtnLabel jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Button Label"
                            name="./cardBtnLabel" />
                        <cardBtnURL jcr:primaryType="nt:unstructured"
                            sling:resourceType="cq/gui/components/coral/common/form/pagefield"
                            fieldDescription="Select path of button url for content page."
                            fieldLabel="Button URL"
                            name="./cardBtnURL"
                            rootPath="/content" />
                        <cardBtnIconType jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                            fieldLabel="CTA Icon Type"
                            name="./cardBtnIconType">
                            <items jcr:primaryType="nt:unstructured">
                                <default jcr:primaryType="nt:unstructured"
                                    text="Select CTA type icon"
                                    value="noIcn" />
                                <internal jcr:primaryType="nt:unstructured"
                                    text="Internal"
                                    value="chevron-circle-right" />
                                <external jcr:primaryType="nt:unstructured"
                                    text="External"
                                    value="external-link" />
                                <pdf jcr:primaryType="nt:unstructured"
                                     text="PDF"
                                     value="file-pdf" />
                            </items>
                        </cardBtnIconType>
                        <cardBtnTarget jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                            fieldLabel="Button Target"
                            name="./cardBtnTarget">
                            <items jcr:primaryType="nt:unstructured">
                                <sametab jcr:primaryType="nt:unstructured"
                                    text="Same Tab"
                                    value="_self" />
                                <newtab jcr:primaryType="nt:unstructured"
                                    text="New Tab"
                                    value="_blank" />
                            </items>
                        </cardBtnTarget>
                    </items>
                    <granite:data jcr:primaryType="nt:unstructured"
                        showhidetargetvalue="button" />
                </buttonConfig>
                <linkConfig granite:class="hide cta-type-option-showhide-target"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container">
                    <items jcr:primaryType="nt:unstructured">
                        <cardLinkLabel jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Link Label"
                            name="./cardLinkLabel" />
                        <cardLinkURL jcr:primaryType="nt:unstructured"
                            sling:resourceType="cq/gui/components/coral/common/form/pagefield"
                            fieldDescription="Select path of link url for content page."
                            fieldLabel="Link URL"
                            name="./cardLinkURL"
                            rootPath="/content" />
                        <cardLinkIconType jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                            fieldLabel="CTA Icon Type"
                            name="./cardLinkIconType">
                            <items jcr:primaryType="nt:unstructured">
                                <default jcr:primaryType="nt:unstructured"
                                    text="Select CTA type icon"
                                    value="noIcn" />
                                <internal jcr:primaryType="nt:unstructured"
                                    text="Internal"
                                    value="chevron-circle-right" />
                                <external jcr:primaryType="nt:unstructured"
                                    text="External"
                                    value="external-link" />
                                <pdf jcr:primaryType="nt:unstructured"
                                    text="PDF"
                                    value="file-pdf" />
                            </items>
                        </cardLinkIconType>
                        <cardLinkTarget jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Link Target"
                                name="./cardLinkTarget">
                            <items jcr:primaryType="nt:unstructured">
                                <sametab jcr:primaryType="nt:unstructured"
                                    text="Same Tab"
                                    value="_self" />
                                <newtab jcr:primaryType="nt:unstructured"
                                    text="New Tab"
                                    value="_blank" />
                            </items>
                        </cardLinkTarget>
                    </items>
                    <granite:data jcr:primaryType="nt:unstructured"
                        showhidetargetvalue="link" />
                </linkConfig>
                <cardLinkConfig granite:class="hide cta-type-option-showhide-target"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container">
                    <items jcr:primaryType="nt:unstructured">
                        <cardLinkLabel jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                            fieldLabel="Link Label"
                            name="./cardLinkLabel" />
                        <cardLinkURL jcr:primaryType="nt:unstructured"
                            sling:resourceType="cq/gui/components/coral/common/form/pagefield"
                            fieldDescription="Select path of link url for content page."
                            fieldLabel="Link URL"
                            name="./cardLinkURL"
                            rootPath="/content" />
                        <cardLinkIconType jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                            fieldLabel="CTA Icon Type"
                            name="./cardLinkIconType">
                            <items jcr:primaryType="nt:unstructured">
                                <default jcr:primaryType="nt:unstructured"
                                    text="Select CTA type icon"
                                    value="noIcn" />
                                <internal jcr:primaryType="nt:unstructured"
                                    text="Internal"
                                    value="chevron-circle-right" />
                                <external jcr:primaryType="nt:unstructured"
                                    text="External"
                                    value="external-link" />
                                <pdf jcr:primaryType="nt:unstructured"
                                    text="PDF"
                                    value="file-pdf" />
                            </items>
                        </cardLinkIconType>
                        <cardLinkTarget jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                fieldLabel="Link Target"
                                name="./cardLinkTarget">
                            <items jcr:primaryType="nt:unstructured">
                                <sametab jcr:primaryType="nt:unstructured"
                                    text="Same Tab"
                                    value="_self" />
                                <newtab jcr:primaryType="nt:unstructured"
                                    text="New Tab"
                                    value="_blank" />
                            </items>
                        </cardLinkTarget>
                    </items>
                    <granite:data jcr:primaryType="nt:unstructured"
                        showhidetargetvalue="cardlink" />
                </cardLinkConfig>
            </items>
        </columns>
    </items>
</jcr:root>