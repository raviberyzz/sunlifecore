<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    cq:actions="[edit,delete,copymove,insert]"
    jcr:primaryType="cq:EditConfig">
    <cq:listeners
        jcr:primaryType="cq:EditListenersConfig"
        afteradd="REFRESH_SELF"
        afterdelete="REFRESH_SELF"
        afteredit="REFRESH_SELF"
        afterinsert="REFRESH_INSERTED"/>
    <cq:actionConfigs jcr:primaryType="nt:unstructured">
        <addLink
            jcr:primaryType="nt:unstructured"
            handler="sunAuth.core.component.cardContainer.card.add"
            icon="coral-Icon--treeExpandAll"
            text="Add content card component"/>
        <toggle
            jcr:primaryType="nt:unstructured"
            handler="sunAuth.core.component.common.toggle"
            icon="coral-Icon--viewOn"
            text="Toggle Component Visibility"/>
    </cq:actionConfigs>
</jcr:root>
