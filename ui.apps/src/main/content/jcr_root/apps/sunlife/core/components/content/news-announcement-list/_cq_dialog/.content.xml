<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Newsroom Announcement Overview and List"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="cmp-news-list__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tab
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">
                    <tab1
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Newsroom Announcement overview and Listing"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <selectionSection
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Please select"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <newsType
                                        granite:class="cq-dialog-dropdown-showhide"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        name="./newsType">
                                        <items jcr:primaryType="nt:unstructured">
                                            <overview
                                                jcr:primaryType="nt:unstructured"
                                                text="News Overview Module"
                                                value="1"/>
                                            <releases
                                                jcr:primaryType="nt:unstructured"
                                                text="News Listing"
                                                value="2"/>
                                        </items>
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"/>
                                    </newsType>
                                </items>
                            </selectionSection>
                            <generalSection
                                jcr:primaryType="nt:unstructured"
                                jcr:title="General"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <parentPath
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                        fieldDescription="Path under which the Content Fragments are located."
                                        fieldLabel="Parent Path"
                                        name="./parentPath"
                                        required="{Boolean}true"
                                        rootPath="/content/dam"/>
                                    <release
                                        granite:class="hide list-option-listfrom-showhide-target foundation-layout-util-vmargin"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <latestYear
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Latest Year"
                                                fieldLabel="Latest Year"
                                                name="./latestYear"/>
                                            <numberOfTabs
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="/libs/granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Number of tabs"
                                                name="./numberOfTabs">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <option1
                                                        jcr:primaryType="nt:unstructured"
                                                        text="1"
                                                        value="1"/>
                                                    <option2
                                                        jcr:primaryType="nt:unstructured"
                                                        text="2"
                                                        value="2"/>
                                                    <option3
                                                        jcr:primaryType="nt:unstructured"
                                                        text="3"
                                                        value="3"/>
                                                    <option4
                                                        jcr:primaryType="nt:unstructured"
                                                        text="4"
                                                        value="4"/>
                                                    <option5
                                                        jcr:primaryType="nt:unstructured"
                                                        text="5"
                                                        value="5"/>
                                                </items>
                                            </numberOfTabs>
                                            <noNewsMessage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Message to be displayed when no news are present"
                                                fieldLabel="Message to be displayed when no news are present"
                                                name="./noNewsMessage"/>
                                        </items>
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            showhidetargetvalue="2"/>
                                    </release>
                                    <newsArticleUrl
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                        fieldDescription="News Article URL"
                                        fieldLabel="News Article URL"
                                        name="./newsArticleUrl"
                                        required="{Boolean}false"/>
                                    <maxItems
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                        fieldDescription="Maximum number of items displayed in the list."
                                        fieldLabel="Max Items"
                                        min="{Long}0"
                                        name="./maxItems"
                                        required="{Boolean}true"/>
                                </items>
                            </generalSection>
                            <paginationSection
                                granite:class="hide list-option-listfrom-showhide-target foundation-layout-util-vmargin"
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Pagination"
                                sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                <items jcr:primaryType="nt:unstructured">
                                    <previousText
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Previous Button Label"
                                        fieldLabel="Previous Button Label"
                                        name="./previousText"/>
                                    <nextText
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Next Button Label"
                                        fieldLabel="Next Button Label"
                                        name="./nextText"/>
                                    <pageText
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Page Label"
                                        fieldLabel="Page Label"
                                        name="./pageText"/>
                                    <ofText
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Of Label"
                                        fieldLabel="Of Label"
                                        name="./ofText"/>
                                </items>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    showhidetargetvalue="2"/>
                            </paginationSection>
                        </items>
                    </tab1>
                </items>
            </tab>
        </items>
    </content>
</jcr:root>
