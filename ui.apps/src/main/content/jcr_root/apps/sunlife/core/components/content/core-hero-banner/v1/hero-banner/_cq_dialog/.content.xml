<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" 
    xmlns:granite="http://www.adobe.com/jcr/granite/1.0" 
    xmlns:cq="http://www.day.com/jcr/cq/1.0" 
    xmlns:jcr="http://www.jcp.org/jcr/1.0" 
    xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Hero Banner"
	sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[sunlife.core.author.hero-banner]">
    <content
        granite:class="cmp-hero-banner__editor"
        jcr:primaryType="nt:unstructured"
		sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
             <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">	
                    <BannerType 
						jcr:primaryType="nt:unstructured"
						jcr:title="Banner Properties"
						sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                             <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
											<variant
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
												fieldDescription="Select 'Default' for a default hero banner or 'Login' for a hero banner with a sign-in component."
                                                fieldLabel="Select Banner Type"
                                                name="./variant"
                                                granite:class="cq-dialog-select-showhide"
                                                cq-dialog-select-showhide-target=".banner-type-showhide-target">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <default
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Default"
                                                        selected="{Boolean}true"
                                                        value="defaultBanner"/>
                                                    <login
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Login"
                                                        value="loginBanner"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-select-showhide-target=".banner-type-showhide-target"/>
                                            </variant>
                                            
                                            <defaultBannerConfigContainer	 
												jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/coral/foundation/well"
                                                margin="{Boolean}true"
												granite:class=" banner-type-showhide-target defaultBanner">
												 <items jcr:primaryType="nt:unstructured">
                                                    <field
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/field"
                                                        fieldLabel="Default Hero Banner Configurations"/>	
											        <backgroundStyle    
                                                        jcr:primaryType="nt:unstructured"
                                                        name="./backgroundStyle"
                                                        fieldLabel="Background Style"
                                                        fieldDescription="Select the background style for the banner."
                                                        selectionMode="single"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/buttongroup">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <bright jcr:primaryType="nt:unstructured"
                                                                name="./bright"
                                                                text="Bright"
                                                                value="bright"
                                                                cq-msm-lockable="bright"/>
                                                            <dark jcr:primaryType="nt:unstructured"
                                                                name="./dark"
                                                                text="Dark"
                                                                value="dark"
                                                                cq-msm-lockable="dark"/>
                                                            <neutral jcr:primaryType="nt:unstructured"
                                                                name="./neutral"
                                                                text="Neutral"
                                                                value="neutral"
                                                                cq-msm-lockable="neutral"/>
                                                        </items>
                                                    </backgroundStyle>
                                                    <contentAlignment
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/buttongroup"
                                                        fieldLabel="Content Alignment"
                                                        fieldDescription="Select the alignment for the content within the banner."
                                                        selectionMode="single"
                                                        name="./contentAlignment">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <left
                                                                jcr:primaryType="nt:unstructured"
                                                                name="./left"
                                                                text="Left"
                                                                value="justify-content-start"
                                                                cq-msm-lockable="left"/>
                                                            <right
                                                                jcr:primaryType="nt:unstructured"
                                                                name="./right"
                                                                text="Right"
                                                                value="justify-content-end"
                                                                cq-msm-lockable="right"/>                
                                                        </items>
                                                    </contentAlignment>
                                                    <bannerSize	
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/buttongroup"
                                                        selectionMode="single"
                                                        fieldLabel="Banner Size"
                                                        fieldDescription="Select the size of the banner."
                                                        name="./bannerSize">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <large
                                                                jcr:primaryType="nt:unstructured"
                                                                name="./large"
                                                                text="Large"
                                                                value="lg"
                                                                cq-msm-lockable="right"/>
                                                            <small
                                                                jcr:primaryType="nt:unstructured"
                                                                name="./small"
                                                                text="Small"
                                                                value="sm"
                                                                cq-msm-lockable="right" />
                                                        </items>
                                                    </bannerSize>	
												</items>
											</defaultBannerConfigContainer>
                                            
                                            <loginBannerConfigContainer	 
												jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/coral/foundation/well"
                                                margin="{Boolean}true"
												granite:class="hide banner-type-showhide-target loginBanner">
												 <items jcr:primaryType="nt:unstructured">	
                                                    <field
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/field"
                                                        fieldLabel="Login hero banner variation is not available as of now."/>
												</items>
											</loginBannerConfigContainer>	
										</items>
									</column>
								</items>
							</columns>
						</items>
					</BannerType>
                    <asset jcr:primaryType="nt:unstructured"
                        jcr:title="Asset"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <imageAlignment
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                                sling:hideResource="true">
                                                <items jcr:primaryType="nt:unstructured">                                                   
                                                </items>
                                            </imageAlignment>
                                            <bannerCheck
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                sling:hideResource="true"/>
                                            <imgDesktop
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                autoStart="{Boolean}false"
                                                class="cq-droptarget"
                                                fieldDescription="Please provide the desktop image"
                                                fileNameParameter="./fileNameDesktp"
                                                fileReferenceParameter="./imgDesktopFileReference"
                                                fieldLabel="Desktop Image"
                                                mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                multiple="{Boolean}false"
                                                name="./imgDesktop"
                                                required="{Boolean}true"
                                                allowUpload="{Boolean}false"
                                                title="Upload Image Asset"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>	
                                            <imgTablet
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                allowUpload="{Boolean}false"
                                                autoStart="{Boolean}false"
                                                class="cq-droptarget"
                                                fieldDescription="Please provide the tablet image to be used in the banner."
                                                fieldLabel="Tablet Image"
                                                fileNameParameter="./fileNameTablet"
                                                fileReferenceParameter="./imgTabletFileReference"
                                                mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff,image/svg+xml]"
                                                multiple="{Boolean}false"
                                                name="./imgTablet"
                                                title="Upload Image Asset"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>
                                            <imgMobile
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                allowUpload="{Boolean}false"
                                                autoStart="{Boolean}false"
                                                class="cq-droptarget"
                                                fieldDescription="Please provide the mobile image to be used in the banner."
                                                fieldLabel="Mobile Image"
                                                fileNameParameter="./fileNameMobile"
                                                fileReferenceParameter="./imgMobileFileReference"
                                                mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff,image/svg+xml]"
                                                multiple="{Boolean}false"
                                                name="./imgMobile"
                                                title="Upload Image Asset"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>
                                            <decorative
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                checked="${not empty cqDesign.isDecorative ? cqDesign.isDecorative : false}"
                                                fieldDescription="Check if the image should be ignored by assistive technology and therefore does not require an alternative text. This applies to decorative images only."
                                                name="./isDecorative"
                                                text="Image is decorative"
                                                uncheckedValue="false"
                                                value="{Boolean}true"/>
                                            <alttext
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Alternative Text for the image"
                                                fieldLabel="Alternative Text"
                                                name="./altText"
                                                wrapperClass="cmp-hero-banner__editor-alt"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </asset>
                    <textContent 
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Content"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <headingText		
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                required="{Boolean}true"		
                                                fieldLabel="Heading Text"
                                                fieldDescription="This text display as the headline for the banner. As per reccomendation this text wrap up to 3 lines."
                                                name="./heading"/>
                                            <description
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                sling:resourceSuperType="/apps/sunlife/core/components/content/core-text/v1/text/cq:dialog/content/items/tabs/items/properties/items/columns/items/column/items/text"
                                                name="./description"
                                                fieldDescription="A description to display as the subheadline for the banner. As per reccomendation this text wrap up to 3 lines."
                                                fieldLabel="Description Text"
                                                useFixedInlineToolbar="{Boolean}true"/>	
                                            <ctaType
                                                granite:class="cq-dialog-dropdown-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="CTA Type"
                                                fieldDescription="Select the type of CTA need to render. If don't want any CTA then select the default placeholder option."
                                                name="./ctaType">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <static
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Select CTA Type"
                                                        value="noCTA"/>
                                                    <button
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Button"
                                                        value="button"/>
                                                    <link
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Link"
                                                        value="link"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".cta-type-option-showhide-target"/>
                                            </ctaType>
                                            <buttonConfig
                                                granite:class="hide cta-type-option-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <btnLabel		
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"		
                                                        fieldLabel="Button Label"
                                                        name="./btnLabel"/>
                                                    <btnURL
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="cq/gui/components/coral/common/form/pagefield"
                                                        fieldDescription="Select path of button url for content page."
                                                        fieldLabel="Button URL"
                                                        name="./btnURL"
                                                        rootPath="/content" />
                                                    <ctaIconType
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldLabel="CTA Icon Type"
                                                        name="./ctaIconType">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <default
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Select CTA type icon"
                                                                value="noIcn"/>
                                                            <internal
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Internal"
                                                                value="arrow-circle-right"/>
                                                            <external
                                                                jcr:primaryType="nt:unstructured"
                                                                text="External"
                                                                value="external-link"/>
                                                            <pdf
                                                                jcr:primaryType="nt:unstructured"
                                                                text="PDF"
                                                                value="file-pdf"/>
                                                        </items>
                                                    </ctaIconType>
                                                    <ctaTarget
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldLabel="Button Target"
                                                        name="./ctaTarget">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <sametab
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Same Tab"
                                                                value="_self"/>
                                                            <newtab
                                                                jcr:primaryType="nt:unstructured"
                                                                text="New Tab"
                                                                value="_blank"/>
                                                        </items>
                                                    </ctaTarget>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="button"/>
                                            </buttonConfig>
                                            <linkConfig
                                                granite:class="hide cta-type-option-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <ctaLabel		
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"		
                                                        fieldLabel="Link Label"
                                                        name="./ctaLabel"/>
                                                    <linkURL
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="cq/gui/components/coral/common/form/pagefield"
                                                        fieldDescription="Select path of link url for content page."
                                                        fieldLabel="Link URL"
                                                        name="./linkURL"
                                                        rootPath="/content" />
                                                    <linkIconType
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldLabel="CTA Icon Type"
                                                        name="./linkIconType">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <default
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Select CTA type icon"
                                                                value="noIcn"/>
                                                            <internal
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Internal"
                                                                value="arrow-circle-right"/>
                                                            <external
                                                                jcr:primaryType="nt:unstructured"
                                                                text="External"
                                                                value="external-link"/>
                                                            <pdf
                                                                jcr:primaryType="nt:unstructured"
                                                                text="PDF"
                                                                value="file-pdf"/>
                                                        </items>
                                                    </linkIconType>
                                                    <target
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldLabel="Link Target"
                                                        name="./target">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <sametab
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Same Tab"
                                                                value="_self"/>
                                                            <newtab
                                                                jcr:primaryType="nt:unstructured"
                                                                text="New Tab"
                                                                value="_blank"/>
                                                        </items>
                                                    </target>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="link"/>
                                            </linkConfig>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </textContent>
                    <analytics
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Analytics"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <dataTitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Data Title"
                                                name="./dataTitle"
                                                value=""/>
                                            <dataSection
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Data Section"
                                                name="./dataSection"
                                                value=""/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </analytics>
					<includeSpacing
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="sunlife/core/components/common/editor/dialog/spacing"/>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
