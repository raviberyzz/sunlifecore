<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Hero Banner"
	sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[sunlife.core.author.text,sunlife.core.author.teaser]">
    <content
        granite:class="cmp-teaser-custom__editor"
        jcr:primaryType="nt:unstructured"
		sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
             <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">				
					<variant 
						jcr:primaryType="nt:unstructured"
						jcr:title="Variant"
						sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                             <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
											<target
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
												granite:class="cq-dialog-dropdown-showhide"
												fieldDescription="Select 'Default' for a default hero banner or 'Login' for a hero banner with a sign-in component."
                                                fieldLabel="Select Banner Variant"
                                                name="./variant">
												<granite:data
													jcr:primaryType="nt:unstructured"
													cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <default
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Default"
                                                        value="default"/>
                                                    <login
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Login"
                                                        value="login"/>
                                                </items>
                                            </target>										
										</items>
									</column>
								</items>
							</columns>
						</items>
					</variant>	
                    <image jcr:primaryType="nt:unstructured"
						jcr:title="Image"
						sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                   <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <imageAlignment
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
												sling:hideResource="true">
                                                <items jcr:primaryType="nt:unstructured">                                                   
                                                </items>
                                            </imageAlignment>
                                            <bannerCheck
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                sling:hideResource="true"/>
                                            <file
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                autoStart="{Boolean}false"
                                                class="cq-droptarget"
												fieldDescription="Please provide the desktop image"
                                                fileNameParameter="./fileName"
                                                fileReferenceParameter="./fileReference"
												fieldLabel="Desktop Image"
                                                mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                multiple="{Boolean}false"
                                                name="./file"
												required="{Boolean}true"
												allowUpload="{Boolean}false"
                                                title="Upload Image Asset"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>	
											<imageTablet
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                allowUpload="{Boolean}false"
                                                autoStart="{Boolean}false"
                                                class="cq-droptarget"
                                                fieldDescription="Please provide the tablet image to be used in the banner."
                                                fieldLabel="Tablet Image"
                                                fileNameParameter="./fileName"
                                                fileReferenceParameter="./fileReferenceTablet"
                                                mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff,image/svg+xml]"
                                                multiple="{Boolean}false"
                                                name="./imageTablet"
                                                title="Upload Image Asset"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>
                                            <imageMobile
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                allowUpload="{Boolean}false"
                                                autoStart="{Boolean}false"
                                                class="cq-droptarget"
                                                fieldDescription="Please provide the mobile image to be used in the banner."
                                                fieldLabel="Mobile Image"
                                                fileNameParameter="./fileName"
                                                fileReferenceParameter="./fileReferenceMobile"
                                                mimeTypes="[image/gif,image/jpeg,image/png,image/webp,image/tiff,image/svg+xml]"
                                                multiple="{Boolean}false"
                                                name="./image"
                                                title="Upload Image Asset"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>
                                            <lazyLoading
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                fieldDescription="Check if the banner should be lazy loaded. Should be checked for all images that are below the fold"
                                                name="./isLazyLoaded"
                                                text="Lazy Load Image"
                                                checked="false"
                                                uncheckedValue="false"
                                                value="{Boolean}true"/>
                                            <decorative
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                checked="${not empty cqDesign.isDecorative ? cqDesign.isDecorative : false}"
                                                fieldDescription="Check if the image should be ignored by assistive technology and therefore does not require an alternative text. This applies to decorative images only."
                                                name="./isDecorative"
                                                text="Image is decorative"
                                                uncheckedValue="false"
                                                value="{Boolean}true"/>
                                            <alttext
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Alternative Text for the image"
                                                fieldLabel="Alternative Text"
                                                name="./altText"
                                                wrapperClass="cmp-teaser-custom__editor-alt"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </image>
                    <text jcr:primaryType="nt:unstructured"
						jcr:title="Text"
						sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns jcr:primaryType="nt:unstructured">
                                <items jcr:primaryType="nt:unstructured">
                                    <column jcr:primaryType="nt:unstructured">
                                        <items
                                            jcr:primaryType="nt:unstructured"
                                            sling:hideChildren="[titleGroup,pretitle]">
                                            <descriptionGroup jcr:primaryType="nt:unstructured">
                                                <items
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:hideChildren="[descriptionFromLinkedPage]">
													<headingText														
														jcr:primaryType="nt:unstructured"
														sling:resourceType="granite/ui/components/coral/foundation/form/textfield"														
														fieldLabel="Heading Text"
														name="./heading"/>
                                                    <description
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceSuperType="/apps/sunlife/core/components/content/core-text/v1/text/cq:dialog/content/items/tabs/items/properties/items/columns/items/column/items/text"
                                                        name="./description"
														fieldDescription="A description to display as the subheadline for the banner."
														fieldLabel="Description Text"
                                                        required="{Boolean}false"
                                                        useFixedInlineToolbar="{Boolean}true"/>
                                                </items>
                                            </descriptionGroup>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </text>
					<defaultVariant jcr:primaryType="nt:unstructured"
						jcr:title="Default Variant"
						granite:class="hide list-option-listfrom-showhide-target"
						sling:resourceType="granite/ui/components/coral/foundation/container"						
                        margin="{Boolean}true">
						<granite:data
							jcr:primaryType="nt:unstructured"
							isTab="{Boolean}true"
						    tab-id="default"
							showhidetargetvalue="default"/>
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
										
                                            <backgroundStyle											
												jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/coral/foundation/form/select"
												fieldLabel="Background Style"
												fieldDescription="Select the background style for the banner."
												name="./backgroundStyle">
												<items jcr:primaryType="nt:unstructured">
													<default
														jcr:primaryType="nt:unstructured"
														text="Select"
														value=""/>
													<bright
														jcr:primaryType="nt:unstructured"
														text="Bright"
														value="bright"/>
													<dark
														jcr:primaryType="nt:unstructured"
														text="Dark"
														value="dark"/>   
													<neutral
														jcr:primaryType="nt:unstructured"
														text="Neutral"
														value="neutral"/>														
												</items>
                                            </backgroundStyle>
											
											<contentAlignment											
												jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/coral/foundation/form/select"
												fieldLabel="Content Alignment"
												fieldDescription="Select the alignment for the content within the banner."
												name="./contentAlignment">
												<items jcr:primaryType="nt:unstructured">
													<default
														jcr:primaryType="nt:unstructured"
														text="Select"
														value=""/>
													<left
														jcr:primaryType="nt:unstructured"
														text="Left Align"
														value="left"/>
													<right
														jcr:primaryType="nt:unstructured"
														text="Right Align"
														value="right"/>                                                            
												</items>
                                            </contentAlignment>
											
											<bannerSize											
												jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/coral/foundation/form/select"
												fieldLabel="Banner Size"
												fieldDescription="Select the size of the banner."
												name="./bannerSize">
												<items jcr:primaryType="nt:unstructured">
													<default
														jcr:primaryType="nt:unstructured"
														text="Select"
														value=""/>
													<large
														jcr:primaryType="nt:unstructured"
														text="Large"
														value="large"/>
													<small
														jcr:primaryType="nt:unstructured"
														text="Small"
														value="small"/>                                                            
												</items>
                                            </bannerSize>
											
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </defaultVariant>
					
					
					<loginVariant jcr:primaryType="nt:unstructured"
						granite:class="hide list-option-listfrom-showhide-target"
						jcr:title="Login Variant"
						sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
						<granite:data
							jcr:primaryType="nt:unstructured"
							isTab="{Boolean}true"
						    tab-id="login"
							showhidetargetvalue="login"/>
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">										
                                             <experienceFragmentPath
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldDescription="Select the path for the experience fragment that includes the sign-in component."
                                                fieldLabel="Experience Fragment Path"
                                                name="./experienceFragmentPath"
                                                nodeTypes="cq:Page"
                                                rootPath="/content/experience-fragments/sunlife"
                                                />
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </loginVariant>	
					<actions
                        jcr:primaryType="nt:unstructured"
                        jcr:title="CTA"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                         <items
                                            jcr:primaryType="nt:unstructured"
                                            sling:hideChildren="[actionsEnabled,actionsDisabled,actions]">
											<type
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="CTA Type"
                                                name="./ctaType">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <button
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Button"
                                                        value="button"/>
                                                    <link
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Link"
                                                        value="link"/>
                                                </items>
                                            </type>
                                            <linkURL
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/coral/common/form/pagefield"
                                                fieldDescription="Link applied to teaser elements. URL or path to a content page."
                                                fieldLabel="Link URL"
                                                name="./linkURL"
                                                rootPath="/content"
                                                wrapperClass="foundation-toggleable cmp-teaser__editor-link-url"/>
                                            <target
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Link Target"
                                                name="./target">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <sametab
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Same Tab"
                                                        value="_self"/>
                                                    <newtab
                                                        jcr:primaryType="nt:unstructured"
                                                        text="New Tab"
                                                        value="_blank"/>
                                                </items>
                                            </target>
                                           
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </actions>	
                    <analytics
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Analytics"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <dataTitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Data Title"
                                                name="./dataTitle"
                                                value=""/>
                                            <dataSection
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Data Section"
                                                name="./dataSection"
                                                value=""/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </analytics>
					<includeSpacing
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="sunlife/core/components/common/editor/dialog/spacing"/>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
