<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Modal"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[sunlife.core-author.pop-up-modal,sunlife.core-author.text]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                        margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <modalID
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Unique identifier for the modal"
                                                fieldLabel="Modal ID"
                                                name="./modalID"
                                                required="{Boolean}true"/>
                                            <modalTypes
                                                granite:class="cq-dialog-tab-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Select the type of modal to display. Choosing 'Form Modal' will include a form container component for adding form fields, followed by an area for additional text"
                                                fieldLabel="Modal Type"
                                                name="./modalTypes">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <standard
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Standard Modal"
                                                        value="standardModal"/>
                                                    <form
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Form Modal"
                                                        value="formModal"/>
                                                </items>
                                            </modalTypes>
                                            <trigger
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                checked="{Boolean}false"
                                                name="./trigger"
                                                text="Trigger On Scroll"
                                                uncheckedValue="{Boolean}false"
                                                value="{Boolean}true"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                    <contentSettings
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Content Settings"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                        margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <heading
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Heading of the Modal"
                                                fieldLabel="Heading"
                                                name="./heading"
                                                required="{Boolean}true"/>
                                            <content
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceSuperType="/apps/sunlife/core/components/content/core-text/v1/text/cq:dialog/content/items/tabs/items/properties/items/columns/items/column/items/text"
                                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                fieldDescription="Main content of the Modal"
                                                fieldLabel="Content"
                                                name="./content"
                                                required="{Boolean}true"
                                                useFixedInlineToolbar="{Boolean}true"/>
                                            <additionalField
                                                granite:class="hide text-option-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <additionalText
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceSuperType="/apps/sunlife/core/components/content/core-text/v1/text/cq:dialog/content/items/tabs/items/properties/items/columns/items/column/items/text"
                                                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                        fieldDescription="Additional text to be displayed after the form"
                                                        fieldLabel="Additional Text"
                                                        name="./additionalText"
                                                        useFixedInlineToolbar="{Boolean}true"/>
                                                </items>
                                            </additionalField>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </contentSettings>
                    <footerSettings
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Modal buttons"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                        margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <button
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                composite="{Boolean}true"
                                                fieldLabel="Buttons">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    name="./buttons">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <column
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/well">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <buttonType
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:orderBefore="text"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                                    fieldLabel="Type"
                                                                    name="./buttonType">
                                                                    <items jcr:primaryType="nt:unstructured">
                                                                        <primary
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="Primary"
                                                                            value="btn-primary"/>
                                                                        <secondary
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="Secondary"
                                                                            value="btn-secondary"/>
                                                                    </items>
                                                                </buttonType>
                                                                <text
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldDescription="The text to display on the button."
                                                                    fieldLabel="Button Text"
                                                                    name="./buttonText"/>
                                                                <linkURL
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:orderBefore="icon"
                                                                    sling:resourceType="cq/gui/components/coral/common/form/pagefield"
                                                                    fieldDescription="Enter the URL for the link. Use a full URL for external links (e.g., 'https://www.example.com'), a relative path for internal links (e.g., '/content/page.html'), or an anchor name prefixed with '#' for in-page navigation (e.g., '#section1'). Ensure the correct format is used for the link to function properly."
                                                                    fieldLabel="Link URL"
                                                                    name="./linkURL"/>
                                                                <linkTarget
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                                    fieldLabel="Link Target"
                                                                    name="./linkTarget">
                                                                    <items jcr:primaryType="nt:unstructured">
                                                                        <sameTab
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="Same Tab"
                                                                            value="_self"/>
                                                                        <newTab
                                                                            jcr:primaryType="nt:unstructured"
                                                                            text="New Tab"
                                                                            value="_blank"/>
                                                                    </items>
                                                                </linkTarget>
                                                                <dataTitle
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    emptyText="Please configure the data title for Analytics."
                                                                    fieldDescription="Please configure the data title for Analytics tracking."
                                                                    fieldLabel="Data Title"
                                                                    name="./dataTitle"/>
                                                            </items>
                                                        </column>
                                                    </items>
                                                </field>
                                            </button>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </footerSettings>
                    <analytics
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Analytics"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <analytics
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                emptyText="Please configure the data Section for Analytics."
                                                fieldDescription="Please configure the data Section for Analytics tracking."
                                                fieldLabel="Data Section"
                                                name="./dataSection"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </analytics>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
