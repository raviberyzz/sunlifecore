<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Image"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[core.wcm.components.image.v2.editor,sunlife.core.components.content.core-image.dialog]"
    helpPath="https://www.adobe.com/go/aem_cmp_image_v2"
    trackingFeature="core-components:image:v2">
    <content
        granite:class="cmp-image__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <asset
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Asset"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">	
											<avatarImageType
												jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
												granite:class="cq-dialog-checkbox-showhide"												
												checked="{Boolean}false"
												fieldDescription="Enabling this option will allow you to customize the avatar image type. Avatar images are small proflle pictures of users, often used in user profiles and comments."
												name="./isAvatar"
												text="Enable Avatar Image"												
												uncheckedValue="false" 
												value="true">
												 <granite:data
													jcr:primaryType="nt:unstructured"
													cq-dialog-checkbox-showhide-target=".enable-avatar-showhide-target"/>
											</avatarImageType>												
											<imageTypeContainer	 
												jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/coral/foundation/container"
												granite:class="cmp-image__editor-image-type-container">
												<granite:data
													jcr:primaryType="nt:unstructured"
													showhidecheckboxvalue="true"/>
												 <items jcr:primaryType="nt:unstructured">										
													<avatarType
														granite:class="core-title-sizes"
														jcr:primaryType="nt:unstructured"
														sling:resourceType="granite/ui/components/coral/foundation/form/select"
														fieldLabel="Avatar Image Type"
														name="./avatarType">
														<items jcr:primaryType="nt:unstructured">
															<default
																jcr:primaryType="nt:unstructured"
																selected="true"
																text="Select an Image Type"
																value=""/>
															<image
																jcr:primaryType="nt:unstructured"
																text="Image"
																value="image"/>
															<defaultImg
																jcr:primaryType="nt:unstructured"
																text="Default"
																value="default"/> 
														</items>
													</avatarType>	
													<avatarSize
														granite:class="core-title-sizes"
														jcr:primaryType="nt:unstructured"
														sling:resourceType="granite/ui/components/coral/foundation/form/select"
														fieldLabel="Avatar Image Size"
														name="./avatarSize">
														<items jcr:primaryType="nt:unstructured">
															<default
																jcr:primaryType="nt:unstructured"
																selected="true"
																text="Select an Image Size"
																value=""/>
															<small
																jcr:primaryType="nt:unstructured"
																text="Small"
																value="small"/>														
															<medium
																jcr:primaryType="nt:unstructured"
																text="Medium"
																value="medium"/>    
															<large
																jcr:primaryType="nt:unstructured"
																text="Large"
																value="large"/>
														</items>
													</avatarSize>	
												</items>
											</imageTypeContainer>											
                                            <file
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                autoStart="{Boolean}false"
                                                class="cq-droptarget"
												fieldDescription="Please provide the desktop image"
                                                fileNameParameter="./fileName"
                                                fileReferenceParameter="./fileReference"
												fieldLabel="Image for Desktop version"
                                                mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                multiple="{Boolean}false"
                                                name="./file"
												required="{Boolean}true"
												allowUpload="{Boolean}false"
                                                title="Upload Image Asset"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>																	
											<fileMobile
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                autoStart="{Boolean}false"
												allowUpload="{Boolean}false"
                                                class="cq-droptarget"
                                                fileNameParameter="./fileNameMobile"
                                                fileReferenceParameter="./fileReferenceMobile"
												fieldLabel="Image for Mobile version"
												fieldDescription="Please provide mobile image"
                                                mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                multiple="{Boolean}false"
                                                name="./fileMobile"
                                                title="Upload Image Asset for Mobile"
                                                uploadUrl="${suffix.path}"
                                                useHTML5="{Boolean}true"/>
											<alignment
												granite:class="core-title-sizes"
												jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/coral/foundation/form/select"
												fieldLabel="Image Alignment and Style"
												name="./imageAlignment">
												<items jcr:primaryType="nt:unstructured">													
													<center
														jcr:primaryType="nt:unstructured"
														text="Center"
														value="center"/>														
													<horzMiddle
														jcr:primaryType="nt:unstructured"
														text="Horizontal Middle Align"
														value="horizontalMiddle"/>    
													<fit
														jcr:primaryType="nt:unstructured"
														text="Fit to Section"
														value="fit"/>
													<crop
														jcr:primaryType="nt:unstructured"
														text="Crop overflow image"
														value="crop"/>
												</items>
											</alignment>	
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </asset>
                    <metadata
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Metadata"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
										
										 <alternativeGroup
                                                granite:class="cmp-image__editor-alt"
                                                jcr:primaryType="nt:unstructured"
												sling:hideResource="true"
                                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <alt
                                                        granite:class="cmp-image__editor-alt-text"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Textual alternative of the meaning or function of the image, for visually impaired readers."
                                                        fieldLabel="Alternative Text"
                                                        name="./alt-hidden"
														sling:hideResource="true"
                                                        required="{Boolean}false"/>
                                                    <altValueFromDAM
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        checked="${not empty cqDesign.altValueFromDAM ? cqDesign.altValueFromDAM : true}"
                                                        fieldDescription="When checked, populate the image's alt attribute with the value of the dc:description metadata in DAM."
                                                        name="./altValueFromDAM"
                                                        text="Get alternative text from DAM"
														sling:hideResource="true"
                                                        uncheckedValue="false"
                                                        value="{Boolean}false"/>
                                                </items>
                                            </alternativeGroup>
										    <linkURL
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldDescription="Make the image a link to another resource."
                                                fieldLabel="Link"
                                                name="./linkURL"
												sling:hideResource="true"
                                                nodeTypes="dam:Asset, nt:file, cq:Page"
                                                rootPath="/content"
                                                wrapperClass="cmp-image__editor-link"/>
                                            <id
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="HTML ID attribute to apply to the component."
                                                fieldLabel="ID"
                                                name="./id"
												sling:hideResource="true"
                                                validation="html-unique-id-validator"/>									
                                            <lazyLoading
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                fieldDescription="Check if the image should be lazy loaded. Should be checked for all images that are below the fold"
                                                name="./isLazyLoaded"
                                                text="Lazy Load Image"
                                                checked="false"
                                                uncheckedValue="false"
                                                value="{Boolean}true"/>
                                            <decorative
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                checked="${not empty cqDesign.isDecorative ? cqDesign.isDecorative : true}"
                                                fieldDescription="Check if the image should be ignored by assistive technology and therefore does not require an alternative text. This applies to decorative images only."
                                                name="./isDecorative"
                                                text="Image is decorative"
                                                uncheckedValue="false"
                                                value="{Boolean}true"/>
                                            <hideImageMobile
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                fieldDescription="Check checkbox to hide image in mobile"
                                                name="./hideImageMobile"
                                                text="Hide Image in Mobile"
                                                checked="false"
                                                uncheckedValue="false"
                                                value="{Boolean}true"/>                                            
                                            <captionGroup
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <caption
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Additional information about the image."
                                                        fieldLabel="Caption"
                                                        name="./jcr:title"/>
                                                    <displayPopupTitle
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        checked="${not empty cqDesign.displayPopupTitle ? cqDesign.displayPopupTitle : true}"
                                                        fieldDescription="When checked, the caption won't be displayed below the image, but as a pop-up displayed by some browsers when hovering over the image."
                                                        name="./displayPopupTitle"
                                                        text="Display caption as pop-up"
														sling:hideResource="true"
                                                        uncheckedValue="false"
                                                        value="{Boolean}true"/>
                                                </items>
                                            </captionGroup>
											<alt												
												jcr:primaryType="nt:unstructured"
												sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
												fieldDescription="Textual alternative of the meaning or function of the image, for visually impaired readers."
												fieldLabel="Alternative Text"
												name="./alt"												
												required="{Boolean}false"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </metadata>
					<includeSpacing
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="sunlife/core/components/common/editor/dialog/spacing"/>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
