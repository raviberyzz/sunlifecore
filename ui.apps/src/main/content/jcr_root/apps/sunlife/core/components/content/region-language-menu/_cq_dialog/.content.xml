<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Regional Languages Menu"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tab
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">
                    <tab1
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Regions"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <title
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Title (Desktop)"
                                        name="./title"
                                        required="{Boolean}true"/>
                                    <titleMobile
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Title (Mobile &amp; Tablet)"
                                        name="./titleMobile"/>
                                     <types
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Type / Size"
                                        name="./type">
                                        <items jcr:primaryType="nt:unstructured">
                                            <none
                                                jcr:primaryType="nt:unstructured"
                                                text="No default"
                                                value=""/>
                                            <h2
                                                jcr:primaryType="nt:unstructured"
                                                text="H2"
                                                value="h2"/>
                                            <h3
                                                jcr:primaryType="nt:unstructured"
                                                text="H3"
                                                value="h3"/>
                                            <h4
                                                jcr:primaryType="nt:unstructured"
                                                text="H4"
                                                value="h4"/>
                                            <h5
                                                jcr:primaryType="nt:unstructured"
                                                text="H5"
                                                value="h5"/>
                                        </items>
                                    </types>    
                                    <regions
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        composite="{Boolean}true"
                                        fieldDescription="Regions">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            name="./regions">
                                            <items jcr:primaryType="nt:unstructured">
                                                <linkName
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Link Name"
                                                    name="linkName"
                                                    required="{Boolean}true"/>
                                                <linkUrl
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldLabel="Link Url"
                                                    name="linkUrl"
                                                    required="{Boolean}true"
                                                    suffix=".html"/>
                                                <linkTarget
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="/libs/granite/ui/components/coral/foundation/form/select"
                                                    fieldLabel="Target"
                                                    name="linkTarget">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <option1
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Same Tab"
                                                            value="_self"/>
                                                        <option2
                                                            jcr:primaryType="nt:unstructured"
                                                            text="New Tab"
                                                            value="_target"/>
                                                    </items>
                                                </linkTarget>
                                                <subLinks
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                    composite="{Boolean}true"
                                                    fieldDescription="Click 'Add' to add a new sub link"
                                                    fieldLabel="Sub Links">
                                                    <field
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                                        name="./subLinks">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <subLinkName
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldLabel="Sub Link Name"
                                                                name="subLinkName"
                                                                required="{Boolean}true"/>
                                                            <subLinkUrl
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                fieldLabel="Sub Link Url"
                                                                name="subLinkUrl"
                                                                required="{Boolean}true"
                                                                suffix=".html"/>
                                                            <subLinkTarget
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="/libs/granite/ui/components/coral/foundation/form/select"
                                                                fieldLabel="Target"
                                                                name="subLinkTarget">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <option1
                                                                        jcr:primaryType="nt:unstructured"
                                                                        text="Same Tab"
                                                                        value="_self"/>
                                                                    <option2
                                                                        jcr:primaryType="nt:unstructured"
                                                                        text="New Tab"
                                                                        value="_target"/>
                                                                </items>
                                                            </subLinkTarget>
                                                        </items>
                                                    </field>
                                                </subLinks>
                                                <nextList
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    fieldLabel="Do you want to start a new column?"
                                                    name="nextList"
                                                    text="Do you want to start a new column?"
                                                    value="yes"/>
												<expandList
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    fieldLabel="Do you want to expand this list?"
                                                    name="expandList"
                                                    text="Do you want to expand this list?"
                                                    value="yes"/>
                                            </items>
                                        </field>
                                    </regions>
                                </items>
                            </column>
                        </items>
                    </tab1>
                    <tab2
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Languages"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Title (Desktop)"
                                name="./languageSectionTitle"
                                required="{Boolean}true"/>
                            <titleMobile
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Title (Mobile &amp; Tablet)"
                                name="./languageSectionTitleMobile"/>
                            <language
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    name="./languageLinks">
                                    <items jcr:primaryType="nt:unstructured">
                                        <subLinkName
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Link Name"
                                            name="subLinkName"
                                            required="{Boolean}true"/>
                                        <subLinkUrl
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            fieldLabel="Link Url"
                                            name="subLinkUrl"
                                            required="{Boolean}true"
                                            suffix=".html"/>
                                        <subLinkTarget
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="/libs/granite/ui/components/coral/foundation/form/select"
                                            fieldLabel="Target"
                                            name="subLinkTarget">
                                            <items jcr:primaryType="nt:unstructured">
                                                <option1
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Same Tab"
                                                    value="_self"/>
                                                <option2
                                                    jcr:primaryType="nt:unstructured"
                                                    text="New Tab"
                                                    value="_target"/>
                                            </items>
                                        </subLinkTarget>
                                        <subLinkSeparator
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                            name="subLinkSeparator"
                                            text="Do you want a separator after this link?"
                                            value="yes"/>
										<subLinkHighlight
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                            fieldLabel="Do you want to highlight the Language?"
                                            name="subLinkHighlight"
                                            text="Do you want to highlight the Language?"
                                            value="yes"/>
                                    </items>
                                </field>
                            </language>
                        </items>
                    </tab2>
                    <tab3
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Settings"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <closeModalText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Close Modal Text"
                                name="./closeModalText"
                                required="{Boolean}true"/>
                            <selectLangText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Select Language Message"
                                name="./selectLangText"
                                required="{Boolean}true"/>
                            <backButtonText
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Back Button Text (Mobile &amp; Tablet)"
                                name="./backButtonText"
                                required="{Boolean}true"/>
                            <selectedTabMobile
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="/libs/granite/ui/components/coral/foundation/form/radiogroup"
                                fieldLabel="Selected Tab (Mobile &amp; Tablet)"
                                name="./selectedTabMobile">
                                <items jcr:primaryType="nt:unstructured">
                                    <option1
                                        jcr:primaryType="nt:unstructured"
                                        text="Regions"
                                        value="region-active"/>
                                    <option2
                                        jcr:primaryType="nt:unstructured"
                                        text="Languages"
                                        value="language-active"/>
                                </items>
                            </selectedTabMobile>
                        </items>
                    </tab3> 
					<tab4
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Analytics"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <analyticsId
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                fieldLabel="Data Section"
                                name="./analyticsId"/>
                        </items>
                    </tab4> 					
                </items>
            </tab>
        </items>
    </content>
</jcr:root>
