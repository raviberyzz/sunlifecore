<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Linklist"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[sunlife.core-author.link-list]">
    <content
        granite:class="cmp-linklist--editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <editorialNavigation
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        checked="{Boolean}false"
                        name="./isEditorial"
                        text="Editorial Navigation Style"
                        uncheckedValue="{Boolean}false"
                        value="{Boolean}true"/>
                    <editorialNavigationType
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/form/hidden"
                        name="./isEditorial@TypeHint"
                        value="Boolean"/>
                    <title
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Heading"
                        name="./title"/>
                    <links
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                        composite="{Boolean}true"
                        fieldLabel="Links">
                        <field
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            name="./links">
                            <items jcr:primaryType="nt:unstructured">
                                <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/well">
                                    <items jcr:primaryType="nt:unstructured">
                                        <linkTitle
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Link Title"
                                            name="./linkTitle"
                                            required="{Boolean}true"/>
                                        <linkType
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                            emptyText="Choose Link Type"
                                            fieldLabel="Link Type "
                                            name="./linkType">
                                            <items jcr:primaryType="nt:unstructured">
                                                <internaIWithoutIcon
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Internal Link without Icon"
                                                    value="sl-link-internal-no-icon"/>
                                                <internalLink
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Internal Link with Icon"
                                                    value="sl-link-internal"/>
                                                <externalLink
                                                    jcr:primaryType="nt:unstructured"
                                                    text="External Link"
                                                    value="sl-link-external"/>
                                                <pdfLink
                                                    jcr:primaryType="nt:unstructured"
                                                    text="PDF Link"
                                                    value="sl-link-pdf"/>
                                            </items>
                                        </linkType>
                                        <linkSize
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                            emptyText="Choose Link Size"
                                            fieldLabel="Link Size"
                                            name="./linkSize">
                                            <items jcr:primaryType="nt:unstructured">
                                                <small
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Small"
                                                    value="sl-link-sm"/>
                                                <medium
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Medium"
                                                    value="sl-link-md"/>
                                                <xs
                                                    jcr:primaryType="nt:unstructured"
                                                    text="XS"
                                                    value="sl-link-xs"/>
                                            </items>
                                        </linkSize>
                                        <linkURL
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            fieldDescription="Enter the URL for the link. Use a full URL for external links (e.g., 'https://www.example.com'), a relative path for internal links (e.g., '/content/page.html'), or an anchor name prefixed with '#' for in-page navigation (e.g., '#section1'). Ensure the correct format is used for the link to function properly."
                                            fieldLabel="Link URL"
                                            name="./linkURL"
                                            required="{Boolean}true"
                                            rootPath="/content"
                                            suffix=".html"/>
                                        <language
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Lang Attribute"
                                            name="./langCode"/>
                                        <linkTarget
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                            fieldLabel="Link Target"
                                            name="./target">
                                            <items jcr:primaryType="nt:unstructured">
                                                <sametab
                                                    jcr:primaryType="nt:unstructured"
                                                    text="Same Tab"
                                                    value="_self"/>
                                                <newtab
                                                    jcr:primaryType="nt:unstructured"
                                                    text="New Tab"
                                                    value="_blank"/>
                                            </items>
                                        </linkTarget>
                                        <analytics
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            emptyText="Please configure the data title for Analytics."
                                            fieldDescription="Please configure the data title for Analytics tracking."
                                            fieldLabel="Data Title"
                                            name="./dataTitle"/>
                                    </items>
                                </column>
                            </items>
                        </field>
                    </links>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
