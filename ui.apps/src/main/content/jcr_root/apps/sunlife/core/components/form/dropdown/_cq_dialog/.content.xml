<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Form Dropdown Field">
    <content jcr:primaryType="nt:unstructured">
        <items jcr:primaryType="nt:unstructured">
            <tabs jcr:primaryType="nt:unstructured">
                <items jcr:primaryType="nt:unstructured">
                    <properties jcr:primaryType="nt:unstructured">
                        <items jcr:primaryType="nt:unstructured">
                            <columns jcr:primaryType="nt:unstructured">
                                <items jcr:primaryType="nt:unstructured">
                                    <column jcr:primaryType="nt:unstructured">
                                        <items jcr:primaryType="nt:unstructured">
                                            <mainHeading
                                                jcr:primaryType="nt:unstructured"
                                                text="Form Dropdown Properties"/>
                                            <title
                                                jcr:primaryType="nt:unstructured"
                                                emptyText="Please configure the dropdown title."
                                                name="./jcr:title"
                                                required="{Boolean}false"/>
                                            <name
                                                jcr:primaryType="nt:unstructured"
                                                emptyText="Please configure the dropdown name."
                                                name="./name"
                                                required="{Boolean}true"/>
                                            <id
                                                jcr:primaryType="nt:unstructured"
                                                emptyText="Please configure the dropdown id."
                                                fieldLabel="Dropdown Id"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                name="./id"/>
                                            <isScreenReader
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                fieldDescription="Check if the title has to be hide and read for screenreader only"
                                                name="./isScreenReader"
                                                text="Do you want to Make title hidden"
                                                uncheckedValue="false"
                                                value="{Boolean}true"/>   
											<aria-label
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                emptyText="Please configure the aria label"
                                                fieldLabel="Aria Label"
                                                name="./ariaLabel"/>
                                            <optionTypes jcr:primaryType="nt:unstructured">
                                                <items
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:hideChildren="[checkbox,radio]">
                                                    <dropdown
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Drop-down"
                                                        value="drop-down"/>
                                                    <multiDropDown
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Multi-select drop-down"
                                                        value="multi-drop-down"/>
                                                </items>
                                            </optionTypes>
                                            <fromLocal
                                                granite:class="hide list-option-listfrom-showhide-target foundation-layout-util-vmargin"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="local"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <options
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                        composite="{Boolean}true"
                                                        fieldDescription="Define the options. For single selection types, the last selected option in the list is selected in the result."
                                                        fieldLabel="Options"
                                                        renderReadOnly="{Boolean}true">
                                                        <field
                                                            granite:class="cmp-form-options__editor-item-multifield-composite-item coral-Well"
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                                            name="./itemsGroup">
                                                            <items
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:hideChildren="[value,container]">
                                                                <text
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    emptyText="Please configure the group label."
                                                                    fieldLabel="Text"
                                                                    name="./groupText"/>
                                                                <options
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                                    composite="{Boolean}true"
                                                                    fieldDescription="Define the options. For single selection types, the last selected option in the list is selected in the result."
                                                                    fieldLabel="Options"
                                                                    renderReadOnly="{Boolean}true">
                                                                    <field
                                                                        granite:class="cmp-form-options__editor-item-multifield-composite-item coral-Well"
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                                                        name="./items">
                                                                        <items jcr:primaryType="nt:unstructured">
                                                                            <container
                                                                                granite:class="cmp-form-options__editor-item-multifield-composite-item-container"
                                                                                jcr:primaryType="nt:unstructured"
                                                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                                                <items jcr:primaryType="nt:unstructured">
                                                                                    <selected
                                                                                        granite:class="cmp-form-option-item-active"
                                                                                        jcr:primaryType="nt:unstructured"
                                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                                                        name="./selected"
                                                                                        text="Selected"
                                                                                        uncheckedValue="false"
                                                                                        value="{Boolean}true"/>
                                                                                    <disabled
                                                                                        granite:class="cmp-form-option-item-disabled"
                                                                                        jcr:primaryType="nt:unstructured"
                                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                                                        name="./disabled"
                                                                                        text="Disabled"
                                                                                        value="{Boolean}true"/>
                                                                                </items>
                                                                            </container>
                                                                            <text
                                                                                jcr:primaryType="nt:unstructured"
                                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                                emptyText="Please configure the text."
                                                                                fieldLabel="Text"
                                                                                name="./text"/>
                                                                            <value
                                                                                jcr:primaryType="nt:unstructured"
                                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                                emptyText="Please configure the value."
                                                                                fieldLabel="Value"
                                                                                name="./value"/>
                                                                            <shortName
                                                                                jcr:primaryType="nt:unstructured"
                                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                                emptyText="Please configure the short name."
                                                                                fieldLabel="Short name"
                                                                                name="./shortName"/>
                                                                        </items>
                                                                    </field>
                                                                </options>
                                                            </items>
                                                        </field>
                                                    </options>
                                                </items>
                                            </fromLocal>
                                            <customActionGenerationRequired
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                fieldLabel="Is Custom Action Generation Required"
                                                name="./customActionGenerationRequired"
                                                text="Is Custom Action Generation Required"
                                                value="yes"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                    <constraints
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Constraints"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <constraintMessage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                fieldDescription="Message displayed as tooltip when submitting the form if the value does not validate the Type chosen"
                                                fieldLabel="Required Message"
                                                name="./constraintMessage"
                                                wrapperClass="cmp-form-options__constraintmessage"/>
                                            <required
                                                granite:class="cmp-form-options__required"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                fieldDescription="Whether the user must fill in a value before submitting the form"
                                                name="./required"
                                                text="Required"
                                                value="true"/>
                                           </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </constraints>
                    <analytics
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Analytics"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                        <dataTitle
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                emptyText="Please configure the data title"
                                                fieldDescription="Please configure the data title."
                                                fieldLabel="Data Title"
                                                name="./dataTitle"/>
                                          <dataValue
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                fieldDescription="Please enable to capture the data value for the fields"
                                                name="./dataValue"
                                                text="Data Value"
                                                uncheckedValue="false"
                                                value="{Boolean}true"/>        
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </analytics>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>