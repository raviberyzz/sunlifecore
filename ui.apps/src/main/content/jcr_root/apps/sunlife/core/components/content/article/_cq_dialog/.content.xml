<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Article"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[sunlife.core.author.article]">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <contentFragment
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                        emptyText="Select article content fragment"
                                        fieldDescription="Select article content fragment"
                                        fieldLabel="Article Content Fragment"
                                        name="./fragmentPath"
                                        required="{Boolean}true"/>
                                    <ratingRequired
                                        granite:class="cq-dialog-dropdown-showhide"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Rating Required?"
                                        name="./ratingRequired">
                                        <items jcr:primaryType="nt:unstructured">
                                            <no
                                                jcr:primaryType="nt:unstructured"
                                                text="No"
                                                value="{Boolean}false"/>
                                            <yes
                                                jcr:primaryType="nt:unstructured"
                                                text="Yes"
                                                value="{Boolean}true"/>
                                        </items>
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"/>
                                    </ratingRequired>
                                    <articleUniqueID
                                        granite:class="hide list-option-listfrom-showhide-target"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            showhidetargetvalue="true"/>
                                        <items jcr:primaryType="nt:unstructured">
                                            <articleUniqueID
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Path of the static list."
                                                fieldLabel="Article Unique ID"
                                                name="./articleUniqueID"/>
                                        </items>
                                    </articleUniqueID>
                                    <articleID
                                        granite:class="hide list-option-listfrom-showhide-target"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            showhidetargetvalue="true"/>
                                        <items jcr:primaryType="nt:unstructured">
                                            <articleID
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Article ID"
                                                fieldLabel="Article ID"
                                                value="7600084"
                                                name="./articleID"/>
                                        </items>
                                    </articleID>
                                    <commentRequired
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                        name="./checkboxComment"
                                        text="Comment Required"
                                        uncheckedValue="false"
                                        value="{Boolean}true"/>
                                    <hideDisplayDate
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        name="./checkboxHideDate"
                                        text="Hide Display Date"
                                        uncheckedValue="false"
                                        value="{Boolean}true"/>
                                         <lazyLoading
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                fieldDescription="Check if the article should be lazy loaded. Should be checked for all images that are below the fold"
                                                name="./isLazyLoaded"
                                                text="Lazy Load Image"
                                                checked="false"
                                                uncheckedValue="false"
                                                value="{Boolean}true"/>
                                </items>
                            </column>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
