<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Card Container"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[sunlife.core.author.dynamic-card-container]">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
            granite:id="dynamic-card-tab-hide-show">
        <items jcr:primaryType="nt:unstructured">
            <column
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <tabs
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/tabs"
                            maximized="{Boolean}false">
                        <items jcr:primaryType="nt:unstructured">
                            <general
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="General"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                            margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <cardType
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                            fieldLabel="Card Type"
                                                            fieldDescription="Select the type of card. Different types provide various customization options."
                                                            name="./cardType"
                                                            text="Card Type"
                                                            granite:id="dynamic-card-container-dropdown">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <default
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Select Card/Content Type"
                                                                value="" />
                                                            <horizontal
                                                                jcr:primaryType="nt:unstructure"
                                                                text="Horizontal"
                                                                value="horizontal"
                                                                granite:class="horizontal"/>
                                                            <vertical
                                                                jcr:primaryType="nt:unstructure"
                                                                text="Vertical"
                                                                value="vertical"
                                                                granite:class="vertical"/>
                                                            <avatar
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Avatar"
                                                                value="avatar"
                                                                granite:class="avatar"/>
                                                            <banner
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Banner"
                                                                value="banner"
                                                                granite:class="banner"/>
                                                            <banner-image
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Banner Image"
                                                                value="banner-image"
                                                                granite:class="banner-image"/>
                                                            <media
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Media"
                                                                value="media"
                                                                granite:class="media"/>
                                                            <segmented
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Segmented"
                                                                value="segmented"
                                                                granite:class="segmented"/>
                                                            <statistic
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Statistic"
                                                                value="statistic"
                                                                granite:class="statistic"/>
                                                        </items>
                                                    </cardType>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </general>
                            <horizontal
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Horizontal"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                            margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <horizontalHeightControl
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                            fieldLabel="Height Control"
                                                            fieldDescription="Choose 'Manual' to set a specific height or 'Auto' for automatic height adjustment."
                                                            name="./horizontalHeightControl"
                                                            text="Height Control">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <manual
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Manual"
                                                                    value="manual"/>
                                                            <auto
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Auto"
                                                                    value="auto"/>
                                                        </items>
                                                    </horizontalHeightControl>
                                                    <multipleCard
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            checked="{Boolean}false"
                                                            uncheckedValue="{Boolean}false"
                                                            name="./horizontalMultipleCard"
                                                            fieldDescription="Enable if multiple cards will be added."
                                                            text="Is multiple card?"
                                                            value="{Boolean}true"/>
                                                    <clickable
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            checked="{Boolean}false"
                                                            uncheckedValue="{Boolean}false"
                                                            name="./horizontalClickable"
                                                            fieldDescription="Enable if cards are clickable"
                                                            text="Is card clickable?"
                                                            value="{Boolean}true"/>
                                                    <iconCard
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            checked="{Boolean}false"
                                                            uncheckedValue="{Boolean}false"
                                                            name="./horizontalIconCard"
                                                            fieldDescription="Enable to create icon card."
                                                            text="Is icon card?"
                                                            value="{Boolean}true"/>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </horizontal>
                            <vertical
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Vertical"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                            margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <heightControl
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                            fieldLabel="Height Control"
                                                            fieldDescription="Choose 'Manual' to set a specific height or 'Auto' for automatic height adjustment."
                                                            name="./verticalHeightControl"
                                                            text="Vertical Control">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <manual
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Manual"
                                                                    value="manual"/>
                                                            <auto
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Auto"
                                                                    value="auto"/>
                                                        </items>
                                                    </heightControl>
                                                    <multipleCard
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            checked="{Boolean}false"
                                                            uncheckedValue="{Boolean}false"
                                                            name="./verticalMultipleCard"
                                                            fieldDescription="Enable if multiple cards will be added."
                                                            text="Is multiple card?"
                                                            value="{Boolean}true"/>
                                                    <clickable
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            checked="{Boolean}false"
                                                            uncheckedValue="{Boolean}false"
                                                            name="./verticalClickable"
                                                            fieldDescription="Enable if cards are clickable"
                                                            text="Is card clickable?"
                                                            value="{Boolean}true"/>
                                                    <iconCard
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            checked="{Boolean}false"
                                                            uncheckedValue="{Boolean}false"
                                                            name="./verticalIconCard"
                                                            fieldDescription="Enable to create icon card."
                                                            text="Is icon card?"
                                                            value="{Boolean}true"/>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </vertical>
                            <avatar
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Avatar"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                            margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <largeAvatarSize
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            checked="{Boolean}false"
                                                            uncheckedValue="{Boolean}false"
                                                            name="./largeAvatarSize"
                                                            fieldDescription="Check, if want to show large avatar size."
                                                            text="Is Large Avatar?"
                                                            value="{Boolean}true"/>
                                                    <avatarWithBody
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            checked="{Boolean}false"
                                                            uncheckedValue="{Boolean}false"
                                                            name="./avatarWithBody"
                                                            fieldDescription="Check, if want to show avatar with body content."
                                                            text="Is avatar body card?"
                                                            value="{Boolean}true"/>
                                                    <multipleCard
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            checked="{Boolean}false"
                                                            uncheckedValue="{Boolean}false"
                                                            name="./avatarMultipleCard"
                                                            fieldDescription="Enable if multiple cards will be added."
                                                            text="Is multiple card?"
                                                            value="{Boolean}true"/>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </avatar>
                            <banner
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Banner"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                            margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <withLink
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            checked="{Boolean}false"
                                                            uncheckedValue="{Boolean}false"
                                                            name="./withLink"
                                                            fieldDescription="Check to add a hyperlink to the banner."
                                                            text="With Link"
                                                            value="{Boolean}true"/>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </banner>
                            <bannerWithImage
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Banner With Image"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                            margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <imagePosition jcr:primaryType="nt:unstructured"
                                                                name="./bannerImagePosition"
                                                                fieldLabel="Image Block Position"
                                                                fieldDescription="Select the type of badge want to show. Select none if dont want to show any badge."
                                                                selectionMode="single"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/buttongroup">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <left jcr:primaryType="nt:unstructured"
                                                                    name="./left"
                                                                    text="Left"
                                                                    value="left"
                                                                    cq-msm-lockable="left" />
                                                            <right jcr:primaryType="nt:unstructured"
                                                                name="./right"
                                                                text="Right"
                                                                value="right"
                                                                cq-msm-lockable="right" />
                                                        </items>
                                                    </imagePosition>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </bannerWithImage>
                            <media
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Media"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                            margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <mediaType jcr:primaryType="nt:unstructured"
                                                                name="./mediaType"
                                                                fieldLabel="Media Type"
                                                                fieldDescription="Choose the type and position of media content."
                                                                selectionMode="single"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/buttongroup">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <left jcr:primaryType="nt:unstructured"
                                                                    name="./left"
                                                                    text="Image Left"
                                                                    value="left"
                                                                    cq-msm-lockable="left" />
                                                            <right jcr:primaryType="nt:unstructured"
                                                                name="./right"
                                                                text="Image Right"
                                                                value="right"
                                                                cq-msm-lockable="right" />
                                                            <video jcr:primaryType="nt:unstructured"
                                                                name="./video"
                                                                text="video"
                                                                value="video"
                                                                cq-msm-lockable="video" />
                                                        </items>
                                                    </mediaType>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </media>
                            <segmented
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Segmented"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                            margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <multipleCard
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            checked="{Boolean}false"
                                                            uncheckedValue="{Boolean}false"
                                                            name="./segmentedMultipleCard"
                                                            fieldDescription="Enable if multiple cards will be added."
                                                            text="Is multiple card?"
                                                            value="{Boolean}true"/>
                                                    <formContainer
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            checked="{Boolean}false"
                                                            uncheckedValue="{Boolean}false"
                                                            name="./segmentedformContainer"
                                                            fieldDescription="Check if segment card has form inside."
                                                            text="Is form segment card?"
                                                            value="{Boolean}true"/>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </segmented>
                            <statistics
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Statistic Enhancements"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                            margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <multipleCard
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            checked="{Boolean}false"
                                                            uncheckedValue="{Boolean}false"
                                                            name="./statisticsMultipleCard"
                                                            fieldDescription="Enable if multiple cards will be added."
                                                            text="Is multiple card?"
                                                            value="{Boolean}true"/>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </statistics>
                            <spacing
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/include"
                                    path="/apps/sunlife/core/components/common/editor/dialog/spacing"/>
                        </items>
                    </tabs>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
