<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Dynamic Card Container"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[sunlife.core.author.dynamic-card-container]">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
            granite:id="dynamic-card-tab-hide-show">
        <items jcr:primaryType="nt:unstructured">
            <column
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <tabs
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/tabs"
                            maximized="{Boolean}false">
                        <items jcr:primaryType="nt:unstructured">
                            <general
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="General"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                            margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <cardType
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                            fieldLabel="Card Type"
                                                            fieldDescription="Select the type of card/segmented block. Different types provide various customization options."
                                                            name="./cardType"
                                                            text="Card Type"
                                                            granite:id="dynamic-card-container-dropdown">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <default
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Select Card/Content Block"
                                                                value="" />
                                                            <horizontal
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Horizontal Card"
                                                                value="horizontal"
                                                                granite:class="horizontal"/>
                                                            <vertical
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Vertical Card"
                                                                value="vertical"
                                                                granite:class="vertical"/>
                                                            <avatar
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Avatar Block"
                                                                value="avatar"
                                                                granite:class="avatar"/>
                                                            <banner
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Banner Block"
                                                                value="banner"
                                                                granite:class="banner"/>
                                                            <banner-image
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Banner Image Block"
                                                                value="banner-image"
                                                                granite:class="banner-image"/>
                                                            <media
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Image/Video Block"
                                                                value="media"
                                                                granite:class="media"/>
                                                            <segmented
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Segmented Block"
                                                                value="segmented"
                                                                granite:class="segmented"/>
                                                            <statistic
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Statistic Block"
                                                                value="statistic"
                                                                granite:class="statistic"/>
                                                        </items>
                                                    </cardType>
                                                    <id
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="HTML ID attribute to apply to the component."
                                                        fieldLabel="ID"
                                                        name="./id"
                                                        validation="html-unique-id-validator"/>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </general>
                            <horizontal
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Horizontal Card"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                            margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <horizontalHeightControl
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                            fieldLabel="Height Control"
                                                            fieldDescription="Choose 'Manual' to set a specific height or 'Auto' for automatic height adjustment."
                                                            name="./horizontalHeightControl"
                                                            text="Height Control">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <manual
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Manual"
                                                                    value="manual"/>
                                                            <auto
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Auto"
                                                                    value="auto"/>
                                                        </items>
                                                    </horizontalHeightControl>
                                                    <multipleCard
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            checked="{Boolean}false"
                                                            uncheckedValue="{Boolean}false"
                                                            name="./horizontalMultipleCard"
                                                            fieldDescription="Enable if multiple cards/blocks will be added."
                                                            text="Is multiple cards/blocks?"
                                                            value="{Boolean}true"/>
                                                    <clickable
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            checked="{Boolean}false"
                                                            uncheckedValue="{Boolean}false"
                                                            name="./horizontalClickable"
                                                            fieldDescription="Enable if cards are clickable"
                                                            text="Is clickable card?"
                                                            value="{Boolean}true"/>
                                                    <iconCard
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            checked="{Boolean}false"
                                                            uncheckedValue="{Boolean}false"
                                                            name="./horizontalIconCard"
                                                            fieldDescription="Enable to create icon card."
                                                            text="Is icon card?"
                                                            value="{Boolean}true"/>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </horizontal>
                            <vertical
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Vertical Card"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                            margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <heightControl
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                            fieldLabel="Height Control"
                                                            fieldDescription="Choose 'Manual' to set a specific height or 'Auto' for automatic height adjustment."
                                                            name="./verticalHeightControl"
                                                            text="Vertical Control">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <manual
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Manual"
                                                                    value="manual"/>
                                                            <auto
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Auto"
                                                                    value="auto"/>
                                                        </items>
                                                    </heightControl>
                                                    <multipleCard
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            checked="{Boolean}false"
                                                            uncheckedValue="{Boolean}false"
                                                            name="./verticalMultipleCard"
                                                            fieldDescription="Enable if multiple cards/blocks will be added."
                                                            text="Is multiple cards/blocks?"
                                                            value="{Boolean}true"/>
                                                    <clickable
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            checked="{Boolean}false"
                                                            uncheckedValue="{Boolean}false"
                                                            name="./verticalClickable"
                                                            fieldDescription="Enable if cards are clickable"
                                                            text="Is clickable card?"
                                                            value="{Boolean}true"/>
                                                    <iconCard
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            checked="{Boolean}false"
                                                            uncheckedValue="{Boolean}false"
                                                            name="./verticalIconCard"
                                                            fieldDescription="Enable to create icon card."
                                                            text="Is icon card?"
                                                            value="{Boolean}true"/>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </vertical>
                            <avatar
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Avatar Block"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                            margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <largeAvatarSize
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            checked="{Boolean}false"
                                                            uncheckedValue="{Boolean}false"
                                                            name="./largeAvatarSize"
                                                            fieldDescription="Enable to display large Avatar size."
                                                            text="Is large Avatar?"
                                                            value="{Boolean}true"/>
                                                    <avatarWithBody
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            checked="{Boolean}false"
                                                            uncheckedValue="{Boolean}false"
                                                            name="./avatarWithBody"
                                                            fieldDescription="Enable to display Avatar with body content."
                                                            text="Avatar has description/quote?"
                                                            value="{Boolean}true"/>
                                                    <multipleCard
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            checked="{Boolean}false"
                                                            uncheckedValue="{Boolean}false"
                                                            name="./avatarMultipleCard"
                                                            fieldDescription="Enable if multiple cards/blocks will be added."
                                                            text="Is multiple cards/blocks?"
                                                            value="{Boolean}true"/>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </avatar>
                            <banner
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Banner Block"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                            margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <withLink
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            checked="{Boolean}false"
                                                            uncheckedValue="{Boolean}false"
                                                            name="./withLink"
                                                            fieldDescription="Check to add a hyperlink to the Banner Block."
                                                            text="Banner Block with link"
                                                            value="{Boolean}true"/>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </banner>
                            <bannerWithImage
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Banner Image Block"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                            margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <imagePosition jcr:primaryType="nt:unstructured"
                                                                name="./bannerImagePosition"
                                                                fieldLabel="Image Alignment"
                                                                fieldDescription="Select the alignment for the image within the Banner Image Block."
                                                                selectionMode="single"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/buttongroup">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <left jcr:primaryType="nt:unstructured"
                                                                    name="./left"
                                                                    text="Left"
                                                                    value="left"
                                                                    cq-msm-lockable="left" />
                                                            <right jcr:primaryType="nt:unstructured"
                                                                name="./right"
                                                                text="Right"
                                                                value="right"
                                                                cq-msm-lockable="right" />
                                                        </items>
                                                    </imagePosition>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </bannerWithImage>
                            <media
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Image/Video Block"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                            margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <mediaType jcr:primaryType="nt:unstructured"
                                                                name="./mediaType"
                                                                fieldLabel="Media Type"
                                                                fieldDescription="Choose the type and position of media content."
                                                                selectionMode="single"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/buttongroup">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <left jcr:primaryType="nt:unstructured"
                                                                    name="./left"
                                                                    text="Image Left"
                                                                    value="left"
                                                                    cq-msm-lockable="left" />
                                                            <right jcr:primaryType="nt:unstructured"
                                                                name="./right"
                                                                text="Image Right"
                                                                value="right"
                                                                cq-msm-lockable="right" />
                                                            <video jcr:primaryType="nt:unstructured"
                                                                name="./video"
                                                                text="Video"
                                                                value="video"
                                                                cq-msm-lockable="video" />
                                                        </items>
                                                    </mediaType>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </media>
                            <segmented
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Segmented Block"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                            margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <multipleCard
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            checked="{Boolean}false"
                                                            uncheckedValue="{Boolean}false"
                                                            name="./segmentedMultipleCard"
                                                            fieldDescription="Enable if multiple cards/blocks will be added."
                                                            text="Is multiple cards/blocks?"
                                                            value="{Boolean}true"/>
                                                    <formContainer
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            checked="{Boolean}false"
                                                            uncheckedValue="{Boolean}false"
                                                            name="./segmentedformContainer"
                                                            fieldDescription="Check if Segmented Block uses form components."
                                                            text="Is Segmented Block with a form?"
                                                            value="{Boolean}true"/>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </segmented>
                            <statistics
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Statistic Block"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                            margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <multipleCard
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            checked="{Boolean}false"
                                                            uncheckedValue="{Boolean}false"
                                                            name="./statisticsMultipleCard"
                                                            fieldDescription="Enable if multiple cards/blocks will be added."
                                                            text="Is multiple cards/blocks?"
                                                            value="{Boolean}true"/>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </statistics>
                            <spacing
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/include"
                                    path="/apps/sunlife/core/components/common/editor/dialog/spacing"/>
                        </items>
                    </tabs>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
