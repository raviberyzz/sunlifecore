<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Card Container"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[sunlife.core.author.dynamic-card-container]">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
            granite:id="dynamic-card-tab-hide-show">
        <items jcr:primaryType="nt:unstructured">
            <column
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <tabs
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/tabs"
                            maximized="{Boolean}false">
                        <items jcr:primaryType="nt:unstructured">
                            <general
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="General"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                            margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <name
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldLabel="Name"
                                                            fieldDescription="The contributor's name to display."
                                                            emptyText="Enter the contributor's name to display."
                                                            name="./name"
                                                            required="{Boolean}true"/>
                                                    <cardType
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                            fieldLabel="Card Type"
                                                            fieldDescription="Select the type of card. Different types provide various customization options."
                                                            name="./cardType"
                                                            text="Card Type"
                                                            granite:id="dynamic-card-container-dropdown">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <horizontal
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Horizontal"
                                                                    value="horizontal"
                                                                    granite:class="horizontal"/>
                                                            <vertical
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Vertical"
                                                                    value="vertical"
                                                                    granite:class="vertical"/>
                                                            <avatar
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Avatar"
                                                                    value="avatar"
                                                                    granite:class="avatar"/>
                                                            <banner
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Banner"
                                                                    value="banner"
                                                                    granite:class="banner"/>
                                                            <banner-image
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Banner Image"
                                                                    value="banner-image"
                                                                    granite:class="banner-image"/>
                                                            <media
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Media"
                                                                    value="media"
                                                                    granite:class="media"/>
                                                            <segmented
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Segmented"
                                                                    value="segmented"
                                                                    granite:class="segmented"/>
                                                            <statistic
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Statistic"
                                                                    value="statistic"
                                                                    granite:class="statistic"/>
                                                        </items>
                                                    </cardType>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </general>
                            <horizontal
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Horizontal"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                            margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <heightControl
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                            fieldLabel="Height Control"
                                                            fieldDescription="Choose 'Manual' to set a specific height or 'Auto' for automatic height adjustment."
                                                            name="./heightControl"
                                                            text="Height Control">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <manual
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Manual"
                                                                    value="manual"/>
                                                            <auto
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Auto"
                                                                    value="auto"/>
                                                        </items>
                                                    </heightControl>
                                                    <multipleClickable
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            checked="{Boolean}false"
                                                            uncheckedValue="{Boolean}false"
                                                            name="./horizontalMultipleClickable"
                                                            fieldDescription="Enable if multiple cards will be added."
                                                            text="Multiple Clickable"
                                                            value="{Boolean}true"/>
                                                    <multipleWithIcon
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            checked="{Boolean}false"
                                                            uncheckedValue="{Boolean}false"
                                                            name="./horizontalMultipleWithIcon"
                                                            fieldDescription="Select to include icon within the card."
                                                            text="Multiple with Icon"
                                                            value="{Boolean}true"/>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </horizontal>
                            <vertical
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Vertical"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                            margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <heightControl
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                            fieldLabel="Height Control"
                                                            fieldDescription="Choose 'Manual' to set a specific height or 'Auto' for automatic height adjustment."
                                                            name="./verticalHeightControl"
                                                            text="Vertical Control">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <manual
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Manual"
                                                                    value="manual"/>
                                                            <auto
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Auto"
                                                                    value="auto"/>
                                                        </items>
                                                    </heightControl>
                                                    <multipleClickable
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            checked="{Boolean}false"
                                                            uncheckedValue="{Boolean}false"
                                                            name="./verticalMultipleClickable"
                                                            fieldDescription="Enable if multiple cards will be added."
                                                            text="Multiple Clickable"
                                                            value="{Boolean}true"/>
                                                    <multipleWithIcon
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            checked="{Boolean}false"
                                                            uncheckedValue="{Boolean}false"
                                                            name="./verticalMultipleWithIcon"
                                                            fieldDescription="Select to include icon within the card."
                                                            text="Multiple with Icon"
                                                            value="{Boolean}true"/>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </vertical>
                            <avatar
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Avatar"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                            margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <avatarSize
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                            fieldLabel="Avatar Size"
                                                            fieldDescription="Choose 'Large' for a bigger avatar or 'With Body' to include additional content."
                                                            name="./avatarSize"
                                                            text="Avatar Size">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <large
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Large"
                                                                    value="large"/>
                                                            <withBody
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="With Body"
                                                                    value="withBody"/>
                                                        </items>
                                                    </avatarSize>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </avatar>
                            <banner
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Banner"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                            margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <withLink
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            checked="{Boolean}false"
                                                            uncheckedValue="{Boolean}false"
                                                            name="./withLink"
                                                            fieldDescription="Check to add a hyperlink to the banner."
                                                            text="With Link"
                                                            value="{Boolean}true"/>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </banner>
                            <bannerWithImage
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Banner With Image"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                            margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <imagePosition
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                            fieldLabel="Image Position"
                                                            fieldDescription="Select the position of the image in the banner."
                                                            name="./bannerImagePosition"
                                                            text="Image Position">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <imageBlockLeft
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Image Block Left"
                                                                    value="imageBlockLeft"/>
                                                            <imageBlockRight
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Image Block Right"
                                                                    value="imageBlockRight"/>
                                                        </items>
                                                    </imagePosition>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </bannerWithImage>
                            <media
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Media"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                            margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <mediaType
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                            fieldLabel="Media Type"
                                                            fieldDescription="Choose the type and position of media content."
                                                            name="./mediaType"
                                                            text="Media Type">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <imageBlockLeft
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Image Block Left"
                                                                    value="imageBlockLeft"/>
                                                            <imageBlockRight
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Image Block Right"
                                                                    value="imageBlockRight"/>
                                                            <videoBlock
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="Video Block"
                                                                    value="videoBlock"/>
                                                        </items>
                                                    </mediaType>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </media>
                            <segmented
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Segmented"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                            margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <additionalFeatures
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                            fieldLabel="Additional Features"
                                                            fieldDescription="Select additional features for the segmented card."
                                                            name="./additionalFeatures"
                                                            text="Additional Features">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <withLink
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="With Link"
                                                                    value="withLink"/>
                                                            <withButton
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="With Button"
                                                                    value="withButton"/>
                                                            <withDropdown
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="With Dropdown"
                                                                    value="withDropdown"/>
                                                        </items>
                                                    </additionalFeatures>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </segmented>
                            <statistics
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Statistic Enhancements"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                            margin="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <imagePosition
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                            fieldLabel="Statistic Enhancements"
                                                            fieldDescription="Select to add a rating or gain indicator to the statistic card."
                                                            name="./statisticEnhancements"
                                                            text="Statistic Enhancements">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <withRating
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="With Rating"
                                                                    value="withRating"/>
                                                            <withGainIndicator
                                                                    jcr:primaryType="nt:unstructured"
                                                                    text="With Gain Indicator"
                                                                    value="withGainIndicator"/>
                                                        </items>
                                                    </imagePosition>
                                                </items>
                                            </column>
                                        </items>
                                    </columns>
                                </items>
                            </statistics>
                            <analytics
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/include"
                                    path="/apps/sunlife/core/components/common/editor/dialog/analytics"/>
                            <spacing
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/include"
                                    path="/apps/sunlife/core/components/common/editor/dialog/spacing"/>
                        </items>
                    </tabs>
                </items>
            </column>
        </items>
    </content>
</jcr:root>

