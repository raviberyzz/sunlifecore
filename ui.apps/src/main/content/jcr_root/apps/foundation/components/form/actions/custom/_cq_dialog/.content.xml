<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    granite:class="action-type-dialog"
    jcr:primaryType="nt:unstructured"
    jcr:title="Form Container"
    sling:resourceType="granite/ui/components/coral/foundation/container">
    <granite:data
        jcr:primaryType="nt:unstructured"
        showhidetargetvalue="foundation/components/form/actions/custom"
        usesRedirect="true"/>
    <items jcr:primaryType="nt:unstructured">
        <mainHeading
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/heading"
            level="{Long}3"
            text="Please configure the form properties below"/>
        <method
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/form/select"
            fieldDescription="Please specify the form Method"
            fieldLabel="Method"
            name="./method">
            <items jcr:primaryType="nt:unstructured">
                <get
                    jcr:primaryType="nt:unstructured"
                    text="GET"
                    value="GET"/>
                <post
                    jcr:primaryType="nt:unstructured"
                    text="POST"
                    value="POST"/>
            </items>
        </method>
        <formAction
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
            emptyText="Please specify the form Action"
            fieldDescription="Please specify the form Action"
            fieldLabel="Form Action"
            name="./formAction"
            required="{Boolean}false"/>
        <id
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
            emptyText="Please specify the form ID"
            fieldDescription="Please specify the form ID"
            fieldLabel="Form ID"
            name="./id"/>
        <validation
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
            emptyText="Please specify the form validation function."
            fieldDescription="Please specify the form validation function."
            fieldLabel="Validation Function"
            name="./validation"/>
    </items>
</jcr:root>
